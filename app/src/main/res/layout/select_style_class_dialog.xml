<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="330dp"
    android:layout_height="378dp"
    android:background="@drawable/xunbao_dialog_shape"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/left_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="选择风格"
                android:textColor="#FF3F8B"
                android:textSize="14sp" />

            <View
                android:id="@+id/left_line_view"
                android:layout_width="67dp"
                android:layout_height="1dp"
                android:background="#FF3F8B"
                android:layout_gravity="center_horizontal"
                android:gravity="center"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/img_right_arrow1"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center_vertical"
            android:background="@color/transparenct"
            android:adjustViewBounds="true"
            android:src="@drawable/icon_select_style_class_go" />
        
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/right_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="选择类目"
                android:textColor="#3E3E3E"
                android:textSize="14sp" />

            <View
                android:id="@+id/right_line_view"
                android:layout_width="67dp"
                android:layout_height="1dp"
                android:background="#FF3F8B"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>
    <com.yssj.custom.view.NoScrollViewPager
         android:id="@+id/select_content_viewpager"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:background="@drawable/xunbao_dialog_shape" >
    </com.yssj.custom.view.NoScrollViewPager>

</LinearLayout>