<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin30"
        android:gravity="center"
        android:padding="@dimen/margin5"
        android:text=""
        android:textColor="@color/black"
        android:textSize="@dimen/tv_size17" />
    <TextView
        android:id="@+id/kick_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin"
        android:gravity="center"
        android:paddingLeft="@dimen/margin"
        android:paddingRight="@dimen/margin"
        android:text="可提现的35元的现金红包在等着您"
        android:background="@drawable/pink_bg"
        android:textColor="#ffffff"
        android:textSize="@dimen/tv_size17"
        android:visibility="gone" />
    
    <View 
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/margin20"
        android:layout_marginBottom="@dimen/margin20"
        android:background="@drawable/dash_line1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="@dimen/margin"
        android:gravity="center_vertical"
        android:orientation="horizontal" >


        <ImageView
            android:id="@+id/iv_wxin_share"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/bg_wxin_share" />
         <ImageView
            android:id="@+id/iv_wxin_circle_share"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/weixin_share_friend" />
        <ImageView
            android:id="@+id/iv_qq_share"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
           android:visibility="gone"
            android:src="@drawable/bg_qq_share" 
            />
       

        <ImageView
            android:id="@+id/iv_sina_share"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone"
            android:src="@drawable/img_sina_share" />
    </LinearLayout>

</LinearLayout>