<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white" >

    <com.yssj.custom.view.RoundImageButton
        android:id="@+id/rib_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:clickable="false"
        android:background="@color/transparenct"
        android:layout_marginBottom="@dimen/margin15"
        android:layout_marginLeft="@dimen/margin14"
        android:layout_marginTop="@dimen/margin10" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin15"
        android:layout_marginLeft="@dimen/margin21"
        android:layout_marginTop="@dimen/margin15"
        android:layout_toRightOf="@id/rib_img"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/title_color"
            android:textSize="@dimen/tv_size18" 
            />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="@dimen/margin5"
            android:singleLine="true"
            android:textColor="@color/text1_color"
            android:textSize="@dimen/tv_size14" 
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_msg_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/circle_comment_icon"
                android:textColor="@color/text1_color"
                android:drawablePadding="5dp"
                android:textSize="@dimen/tv_size14" />

            <TextView
                android:id="@+id/tv_access_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin"
                android:drawableLeft="@drawable/circle_person_count"
                android:drawablePadding="5dp"
                android:textColor="@color/text1_color"
                android:textSize="@dimen/tv_size14" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>