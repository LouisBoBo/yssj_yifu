<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lln"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/bai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
    </LinearLayout>

    <ImageView
        android:id="@+id/meal_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp" />

    <com.yssj.custom.view.MealRecomenView
        android:id="@+id/meal_r"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </com.yssj.custom.view.MealRecomenView>

    <LinearLayout
        android:id="@+id/sevalauate_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/evaluate_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="@dimen/margin"
                android:gravity="center"
                android:text="商品好评率"
                android:textColor="#000"
                android:textSize="@dimen/tv_size16" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="@color/shopcar_bn" />

            <LinearLayout
                android:id="@+id/ll_container_progress"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="@dimen/margin"
                android:orientation="horizontal" >

                <com.yssj.ui.activity.view.CircleProgressView
                    android:id="@+id/pb_color_count"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1" />

                <com.yssj.ui.activity.view.CircleProgressView
                    android:id="@+id/pb_type_count"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1" />

                <com.yssj.ui.activity.view.CircleProgressView
                    android:id="@+id/pb_work_count"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1" />

                <com.yssj.ui.activity.view.CircleProgressView
                    android:id="@+id/pb_cost_count"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="没有色差"
                    android:textColor="#9a9a9a"
                    android:textSize="@dimen/tv_size15" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="版型好看"
                    android:textColor="#9a9a9a"
                    android:textSize="@dimen/tv_size15" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="做工不错"
                    android:textColor="#9a9a9a"
                    android:textSize="@dimen/tv_size15" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="性价比好"
                    android:textColor="#9a9a9a"
                    android:textSize="@dimen/tv_size15" />
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/comment01_img"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_nodata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
        </LinearLayout>

        <View
            android:id="@+id/v_line"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="13dp"
            android:background="@color/shopcar_bn"
            android:visibility="gone" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_youxuan_comments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="优选点评"
            android:textColor="#000"
            android:textSize="@dimen/tv_size15" />

        <View
            android:id="@+id/diver"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_marginBottom="18dp"
            android:layout_marginTop="13dp"
            android:background="@color/shopcar_bn" />

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/img_user_header"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:background="@null" />

            <RelativeLayout
                android:id="@+id/rel_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:layout_marginTop="@dimen/margin" >

                <TextView
                    android:id="@+id/tv_user"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:singleLine="true"
                    android:text="mingzi"
                    android:textColor="#9a9a9a"
                    android:textSize="@dimen/tv_size12" />

                <RatingBar
                    android:id="@+id/smy_ratingbar"
                    style="@style/MyStarRatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="@dimen/margin"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:paddingLeft="3dp"
                    android:rating="3.5"
                    android:stepSize="0.1" />

                <TextView
                    android:id="@+id/tv_evaluate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="8dp"
                    android:layout_toLeftOf="@id/smy_ratingbar"
                    android:layout_toRightOf="@id/tv_user"
                    android:gravity="center|left"
                    android:singleLine="true"
                    android:textColor="#9a9a9a"
                    android:textSize="@dimen/tv_size15" />

                <LinearLayout
                    android:id="@+id/content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_user"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:gravity="center|left"
                        android:singleLine="true"
                        android:text="20151111"
                        android:textColor="#9a9a9a"
                        android:textSize="@dimen/tv_size15" />

                    <TextView
                        android:id="@+id/tv_descri"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center|left"
                        android:text="neirong"
                        android:textColor="#000"
                        android:textSize="@dimen/tv_size15" />

                    <TextView
                        android:id="@+id/tv_size_color"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|left"
                        android:textColor="#9a9a9a"
                        android:textSize="@dimen/tv_size15" />

                    <LinearLayout
                        android:id="@+id/img_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal" >
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_one_reply"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin"
                        android:textColor="#000"
                        android:textSize="@dimen/tv_size15"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/lin_second"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin"
                        android:layout_marginTop="@dimen/margin"
                        android:background="@drawable/second_judge_bg"
                        android:orientation="vertical"
                        android:visibility="gone" >

                        <TextView
                            android:id="@+id/tv_second_judge"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margin"
                            android:textColor="#898989"
                            android:textSize="@dimen/tv_size15"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tv_second_reply"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/margin"
                            android:layout_marginLeft="@dimen/margin"
                            android:layout_marginRight="@dimen/margin"
                            android:textColor="#000"
                            android:textSize="@dimen/tv_size15"
                            android:visibility="gone" />

                        <LinearLayout
                            android:id="@+id/two_image_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/margin"
                            android:layout_marginLeft="@dimen/margin"
                            android:orientation="horizontal"
                            android:visibility="gone" >
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <com.yssj.custom.view.SizeView
        android:id="@+id/size_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/image_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <!--                android:layout_marginTop="5dp"
-->

            <ImageView
                android:id="@+id/image_position"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

            <com.yssj.custom.view.SizeView2
                android:id="@+id/size_view2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/shaixuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"
            android:background="@null"
            android:src="@drawable/shaixuan"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/shaixuan"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="20dp"
            android:background="@null"
            android:src="@drawable/search_shop_detail"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/item_position"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <com.yssj.custom.view.ItemView
            android:layout_marginLeft="8dp"
            android:id="@+id/left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:layout_weight="1" >
        </com.yssj.custom.view.ItemView>

        <com.yssj.custom.view.ItemView
            android:layout_marginLeft="4dp"
            android:layout_marginRight="8dp"
            android:id="@+id/right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >
        </com.yssj.custom.view.ItemView>
    </LinearLayout>

    <ImageView
        android:id="@+id/size_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY" />

</LinearLayout>