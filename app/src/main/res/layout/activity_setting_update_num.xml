<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <include layout="@layout/base_head" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin20"
            android:layout_marginRight="@dimen/margin20"
            android:layout_marginTop="@dimen/margin"
            android:gravity="center_vertical"
            android:text="请输入您需要绑定的新手机号码"
            android:textColor="@color/text_color"
            android:textSize="@dimen/tv_size16" />

        <RelativeLayout
            android:id="@+id/rel_new_num"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin15"
            android:layout_marginLeft="@dimen/margin20"
            android:layout_marginRight="@dimen/margin20"
            android:layout_marginTop="@dimen/margin15"
            android:background="@drawable/common_edittext_bg"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_new_num"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:gravity="center_vertical"
                android:text="新手机号"
                android:textColor="@color/title_color"
                android:textSize="@dimen/tv_size19" />

          <EditText
                android:id="@+id/et_new_num"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_toRightOf="@id/tv_new_num"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入手机号码"
                android:inputType="phone"
                android:padding="@dimen/margin"
                android:paddingLeft="5dp"
                android:textColorHint="#bdbdbd"
                android:textCursorDrawable="@null"
                android:textColor="@color/title_color"
                android:textSize="@dimen/tv_size19" />
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_next_step"
        android:layout_width="match_parent"
        android:layout_height="@dimen/et_login_height"
        android:layout_marginLeft="@dimen/margin20"
        android:layout_marginRight="@dimen/margin20"
        android:layout_marginTop="25dp"
        android:background="@drawable/u17"
        android:text="下一步"
        android:textColor="@color/white" />

</LinearLayout>