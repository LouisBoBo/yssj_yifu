<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_singn_dialog_shape"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_close_oneyuan"
            android:layout_gravity="right"
            />


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="本轮未点中哦"
            android:textColor="#333333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tag_name"
            android:layout_width="244dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="尊贵的会员，您可以继续免费领，也可离开去浏览别的商品。"
            android:textColor="#7d7d7d"
            android:textSize="14sp" />





        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/btn_cancel"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/bg_red_ok"
                android:text="再点一轮"
                android:gravity="center"
                android:layout_marginLeft="18dp"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/btn_ok"
                android:layout_width="120dp"
                android:gravity="center"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="18dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_tans_cancel"
                android:text="离开"
                android:textColor="@color/common_red"
                android:textSize="18sp"
                android:visibility="visible" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>