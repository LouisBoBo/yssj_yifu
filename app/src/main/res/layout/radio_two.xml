<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lin_two"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rel_old_pass"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/et_phone_no"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="#00000000"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:hint="请输入手机号码"
            android:inputType="textPhonetic"
            android:padding="@dimen/margin"
            android:paddingLeft="5dp"
            android:textColor="#18b4ed"
            android:textColorHint="#bdbdbd"
            android:textCursorDrawable="@null"
            android:textSize="16sp" />
        <Button 
            android:id="@+id/btn_get_code"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_toRightOf="@id/et_phone_no"
            android:layout_centerVertical="true"
            android:text="获取验证码"/>
    </RelativeLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#d4d5d6" />

    <RelativeLayout
        android:id="@+id/rel_pay_pass"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_v_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="验证码:"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_v_code"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/tv_v_code"
            android:background="#00000000"
            android:gravity="center_vertical"
            android:hint="请输入验证码"
            android:inputType="text"
            android:padding="@dimen/margin"
            android:paddingLeft="5dp"
            android:textColor="#18b4ed"
            android:textColorHint="#bdbdbd"
            android:textCursorDrawable="@null"
            android:textSize="16sp" />
    </RelativeLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#d4d5d6" />

    <RelativeLayout
        android:id="@+id/rel_confirm_pay_pass"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_confirm_pay_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="新密码:"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_new_pay_pass"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/tv_confirm_pay_pass"
            android:background="#00000000"
            android:gravity="center_vertical"
            android:hint="请输入新支付密码"
            android:inputType="textPassword"
            android:padding="@dimen/margin"
            android:paddingLeft="5dp"
            android:textColor="#18b4ed"
            android:textColorHint="#bdbdbd"
            android:textCursorDrawable="@null"
            android:textSize="16sp" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_phone_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin"
        android:text="提交" />

</LinearLayout>