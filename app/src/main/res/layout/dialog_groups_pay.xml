<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000"
    android:orientation="vertical"
    android:paddingLeft="@dimen/margin18"
    android:paddingRight="@dimen/margin18">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin30"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:id="@+id/groups_pay_v"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <!--        <ImageView
                        android:id="@+id/result_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_groups_fail" />-->

            <TextView
                android:id="@+id/result_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="拼团人数已满,请立即付款!"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin40"
                android:layout_marginTop="@dimen/margin20"
                android:gravity="center_horizontal"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="剩余"
                    android:textColor="#FFFFFF"
                    android:layout_marginRight="6dp"
                    android:textSize="@dimen/tv_size12" />

                <TextView
                    android:id="@+id/time_tv_hours"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/back_time_bg_red"
                    android:gravity="center"
                    android:text="00"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/tv_size18"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/time_tv_hours_hour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:text="时"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/tv_size12" />

                <TextView
                    android:id="@+id/time_tv_minutes"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/back_time_bg_red"
                    android:gravity="center"
                    android:text="00"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/tv_size18"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:text="分"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/tv_size12" />

                <TextView
                    android:id="@+id/time_tv_seconds"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/back_time_bg_red"
                    android:gravity="center"
                    android:text="00"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/tv_size18"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:gravity="center"
                    android:text="秒"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/tv_size12" />
            </LinearLayout>

            <TextView
                android:id="@+id/groups_pay_btn"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bg_groups_pay"
                android:gravity="center"
                android:text="去付款"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

        </LinearLayout>
        <!--    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/result_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_groups_fail" />

            <TextView
                android:id="@+id/result_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="很遗憾，拼团未成功！"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />


        </LinearLayout>-->

