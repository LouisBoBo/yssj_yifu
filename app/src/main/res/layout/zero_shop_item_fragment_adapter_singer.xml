               <TextView
            android:id="@+id/tv_zero_product_price_RMB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/pink_color"
            android:layout_below="@id/tv_zero_product_name"
            android:layout_toRightOf="@id/rl_img"
               android:layout_marginLeft="20dp"
               android:layout_marginTop="10dp"
            android:textSize="12sp"
            android:visibility="visible"
            android:text="¥" />
               
        <TextView
            android:id="@+id/tv_zero_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/pink_color"
            android:layout_toRightOf="@id/tv_zero_product_price_RMB"
            android:layout_marginTop="3dp"
            android:layout_below="@id/tv_zero_product_name"
            android:textSize="19sp"
            android:visibility="visible"
            android:text="显价" />
        
        <TextView
            android:id="@+id/tv_zero_price_outdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        	android:layout_toRightOf="@id/tv_zero_product_price"
        	android:layout_alignBottom="@id/tv_zero_product_price_RMB"
            android:textColor="#C5C5C5"
            android:textSize="10sp"
            android:layout_marginLeft="3dp"
            android:text="划价" />

        
        
        <TextView
            android:id="@+id/tv_zero_shop_postage"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
           android:layout_marginLeft="10dp"
            
            android:layout_toRightOf="@id/tv_zero_price_outdate"
            android:layout_below="@id/tv_zero_product_name"
            android:layout_marginTop="12dp"
           android:background="@drawable/zero_shop_item_postage"
            android:textColor="@color/title_color"
            android:textSize="@dimen/tv_size10"
          
            
            android:visibility="visible"
           
            android:text="邮费"/>
        
        <TextView
            android:id="@+id/tv_zero_shop_postage_gone"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
           android:layout_marginLeft="10dp"
            android:layout_marginRight="@dimen/margin15"
             android:layout_toRightOf="@id/tv_zero_price_outdate"
            android:layout_alignBottom="@id/tv_zero_product_price_RMB"
           android:background="@drawable/zero_shop_item_postage_gone"
            android:textColor="#C5C5C5"
            android:textSize="@dimen/tv_size10"
            
            android:visibility="gone"
            android:text="邮"/>
        
       
           
         
           
            <TextView
                android:layout_below="@id/tv_zero_product_price_RMB"
                android:layout_toRightOf="@id/rl_img"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="9dp"
                android:id="@+id/tv_allowance_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#C5C5C5"
                android:textSize="10dp"
                android:text="仅剩" />
            
            <ProgressBar
            android:id="@+id/pb_allowance_count_zong"
            android:layout_below="@id/tv_allowance_count"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_toRightOf="@id/rl_img"
            android:layout_marginLeft="20dp"
            android:layout_width="115dp"
            android:layout_height="7dp"
            android:max="100"
            android:progress="50"
            android:progressDrawable="@drawable/zero_shop_progressbar"
            android:visibility="visible" />
            
            <ProgressBar
            android:id="@+id/pb_allowance_count_zong_gone"
            android:layout_below="@id/tv_allowance_count"
            style="?android:attr/progressBarStyleHorizontal"
              android:layout_toRightOf="@id/rl_img"
            android:layout_marginLeft="20dp"
            android:layout_width="115dp"
            android:layout_height="7dp"
            android:max="100"
            android:progress="100"
            android:progressDrawable="@drawable/zero_shop_progressbar_gone"
            android:visibility="gone" />
            
            
            
            <Button 
                android:id="@+id/bt_zero_shop"
                android:layout_width="86dp"
                android:layout_height="29dp"
                android:layout_alignBottom="@id/tv_purchase_num"
                android:layout_toRightOf="@id/rl_img"
                android:layout_marginLeft="20dp"
                android:text="立即抢购"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:visibility="visible"
                android:background="@drawable/zero_shop_item_btn"/>
            
             <Button 
                android:id="@+id/bt_zero_shop_gone"
                android:layout_width="86dp"
                android:layout_height="29dp"
                android:layout_marginTop="6dp"
                android:layout_toRightOf="@id/rl_img"
                android:layout_alignBottom="@id/tv_purchase_num"
                android:layout_marginLeft="20dp"
                android:text="立即抢购"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:visibility="gone"
                android:background="@drawable/zero_shop_item_btn_gone"/>
            
           
    
        <TextView
            android:id="@+id/tv_purchase_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          	android:textSize="12sp"
            android:layout_alignBottom="@id/rl_img"
            android:layout_alignParentRight="true"
            android:clickable="false"
            android:textColor="#7d7d7d"
            
            android:text="多少人在抢"/>
      
