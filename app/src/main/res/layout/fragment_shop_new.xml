<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

    <FrameLayout
        android:id="@+id/shop_new_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </FrameLayout>

    <LinearLayout
        android:id="@+id/ll_search"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/zhezhao2x"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/search_ll"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_fenlei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="13dp"
                android:background="@drawable/icon_fenlei_white"
                android:visibility="visible" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/et_search"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/bg_classfalcation_search_shape"
                    android:gravity="left|center_vertical"
                    android:hint=""
                    android:imeOptions="actionSearch"
                    android:inputType="text"
                    android:maxLength="20"
                    android:paddingLeft="33dp"
                    android:paddingRight="6dp"
                    android:singleLine="true"
                    android:textColor="#A8A8A8"
                    android:textColorHint="#A8A8A8"
                    android:textCursorDrawable="@drawable/shape_cursor_commend_red"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/et_search_iv"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/et_search" />

                <ImageView
                    android:id="@+id/et_search_xx"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="center"
                    android:src="@drawable/xxxx"
                    android:visibility="gone" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/tv_message"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="13dp"
                android:background="@drawable/lingdang_white"
                android:gravity="center_vertical"
                android:visibility="visible" />
            <RelativeLayout
                android:id="@+id/rl_sign"
	            android:layout_width="wrap_content"
	            android:layout_height="48dp"
	            android:layout_gravity="center_vertical"
				android:visibility="gone">
		        <TextView
		            android:id="@+id/tv_zhuanqian"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="center_vertical"
		            android:background="@drawable/icon_zhuanqian_white"
		            android:layout_centerInParent="true"
		            android:layout_marginLeft="17dp"
		            android:layout_marginRight="8dp"
		            android:visibility="visible" />
		        <LinearLayout 
					  android:id="@+id/red_share_ll"
					  android:background="@drawable/red_share"
					  android:layout_width="wrap_content"
	                  android:layout_height="wrap_content"
	                  android:layout_marginTop="3dp"
	                  android:layout_marginLeft="2dp"
	                  android:gravity="center"
	                  android:orientation="vertical" >
				  <ImageView 
				      android:id="@+id/money_share_iv"
				      android:layout_width="wrap_content"
	                  android:layout_height="wrap_content"
	                  android:background="@color/transparent"
	                  android:scaleType="center"
	                  android:layout_marginLeft="1dp"
	                  android:src="@drawable/money_share"/>
				</LinearLayout>
			</RelativeLayout>
        </LinearLayout>

        <View
            android:id="@+id/horizontal_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#C5C5C5"
            android:visibility="gone" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_hongbao"
        android:layout_width="65dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="60dp"
        android:layout_marginRight="30dp"
		android:visibility="gone"
        android:src="@drawable/small_redhongbao_nintymoney_600" />


    <ImageView
		android:visibility="gone"
        android:id="@+id/iv_xuanfurugou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="15dp"
		android:layout_marginRight="30dp"
        android:src="@drawable/kuan200" />
    
    <FrameLayout
        android:id="@+id/container_jingixuan"
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:background="#FFFFFF"
        android:clickable="true"
        android:visibility="gone">
    </FrameLayout>


</RelativeLayout>