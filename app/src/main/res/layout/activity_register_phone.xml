<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/registerr"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    android:fitsSystemWindows="true"
    android:scrollbars="none">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include
            android:id="@+id/title"
            layout="@layout/base_head"
            android:background="@drawable/white_fanzao" />

        <LinearLayout
            android:layout_marginTop="20dp"
            android:id="@+id/lay_phoned"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_fanzao"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:visibility="visible">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/et_login_height"
                android:layout_marginLeft="@dimen/margin15"
                android:layout_marginRight="@dimen/margin15"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="@dimen/margin15"
                    android:layout_marginTop="2dp"
                    android:layout_toLeftOf="@+id/tv_acode"
                    android:background="#C5C5C5" />

                <TextView
                    android:id="@+id/tv_acode"
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="7dp"
                    android:clickable="true"
                    android:gravity="center"
                    android:padding="@dimen/margin"
                    android:text="@string/tv_acode"
                    android:textColor="@color/common_red"
                    android:textSize="@dimen/tv_size13" />

                <EditText
                    android:id="@+id/et_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/tv_acode"
                    android:background="@null"
                    android:hint="@string/tv_email"
                    android:inputType="text"
                    android:maxLength="4"
                    android:paddingLeft="5dp"
                    android:textColor="#000"
                    android:textColorHint="@color/text1_color"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/tv_size16" />

                <ImageView
                    android:id="@+id/et_pwd_xx"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/tv_acode"
                    android:scaleType="center"
                    android:src="@drawable/xxxx"
                    android:visibility="gone" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:layout_marginLeft="@dimen/margin15"
                android:layout_marginRight="@dimen/margin15"
                android:layout_marginTop="2dp"
                android:background="#C5C5C5" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/et_login_height"
                android:layout_marginLeft="@dimen/margin15"
                android:layout_marginRight="@dimen/margin15"
                android:layout_marginTop="3dp">

                <ToggleButton
                    android:id="@+id/tv_sbt"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:background="@android:color/transparent"
                    android:button="@drawable/ios7_btn_login"
                    android:checked="false"
                    android:gravity="center"
                    android:text=""
                    android:textOff=""
                    android:textOn="" />

                <com.yssj.custom.view.SwitchButton
                    android:id="@+id/tv_sbt_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="5dp"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/et_ipwd"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@id/tv_sbt"
                    android:background="@null"
                    android:hint="@string/tv_set_ipwd"
                    android:inputType="textPassword"
                    android:maxLength="16"
                    android:paddingLeft="5dp"
                    android:textColor="#000"
                    android:textColorHint="@color/text1_color"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/tv_size16" />

                <ImageView
                    android:id="@+id/et_ipwd_xx"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/tv_sbt"
                    android:scaleType="center"
                    android:src="@drawable/xxxx"
                    android:visibility="gone" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:layout_marginLeft="@dimen/margin15"
                android:layout_marginRight="@dimen/margin15"
                android:layout_marginTop="2dp"
                android:background="#C5C5C5" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_regfinish"
            android:layout_width="match_parent"
            android:layout_height="@dimen/et_login_height"
            android:layout_marginLeft="@dimen/margin15"
            android:layout_marginRight="@dimen/margin15"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn_back"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/tv_rgfinish"
            android:textColor="@color/white"
            android:textSize="@dimen/tv_size18" />

        <LinearLayout
            android:id="@+id/ll_user_protocol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="@dimen/margin15"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_agreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/tv_agreen"
                android:textColor="@color/text1_color"
                android:textSize="@dimen/tv_size14" />

            <TextView
                android:id="@+id/tv_protocol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_protocol"
                android:textColor="@color/pink_color"
                android:textSize="@dimen/tv_size14" />
        </LinearLayout>


    </LinearLayout>

</ScrollView>