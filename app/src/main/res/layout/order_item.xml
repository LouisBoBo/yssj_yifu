<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/rel_shop_name"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_shop_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="我的店"
            android:textSize="15sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/margin"
            android:gravity="center|right"
            android:text="卖家已发货"
            android:textColor="@color/pink_color"
            android:textSize="15sp" />
    </LinearLayout>

    <!--  <View
         android:layout_width="fill_parent"
         android:layout_height="0.5dp"
         android:layout_marginBottom="5dp"
         android:layout_marginTop="5dp"
         android:background="#dbdbdb" /> -->
    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/margin10"
        android:background="@drawable/vertical_line"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/container_item"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin"
        android:focusable="false"
        android:orientation="vertical"></LinearLayout>

    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginRight="@dimen/margin"
        android:orientation="horizontal">


        <TextView
            android:visibility="gone"
            android:id="@+id/tv_re_time"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="剩余00000"
            android:layout_marginLeft="@dimen/margin12"
            android:textColor="@color/common_red"
            android:textSize="13sp" />

        <TextView
            android:layout_toLeftOf="@+id/tv_zprice"
            android:id="@+id/tv_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="共1件商品"
            android:textColor="@color/title_color"
            android:textSize="15sp" />

        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/tv_zprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="5dp"
            android:text="实付  :￥1029.00"
            android:textColor="@color/title_color"
            android:textSize="14sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/lay1"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_marginBottom="7dp"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_contact_seller"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_marginRight="12dp"
            android:background="@drawable/bn_select_orders"
            android:focusable="false"
            android:gravity="center"
            android:text="联系卖家"
            android:textColor="@color/white"
            android:textSize="14sp" />


        <Button
            android:id="@+id/btn_cancel_order"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_marginRight="12dp"
            android:background="@drawable/bn_select_orders"
            android:focusable="false"
            android:gravity="center"
            android:text="取消订单"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_payment"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_marginRight="12dp"
            android:background="@drawable/bn_select_orders"
            android:focusable="false"
            android:gravity="center"
            android:text="付款"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay2"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_marginBottom="7dp"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_payback"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_marginRight="12dp"
            android:background="@drawable/bn_select_orders"
            android:focusable="false"
            android:gravity="center"
            android:text="退款"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_remind_shipments"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_marginRight="12dp"
            android:background="@drawable/bn_select_orders"
            android:focusable="false"
            android:gravity="center"
            android:text="提醒发货"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay3"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_marginBottom="7dp"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_extend_receipt"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_marginRight="12dp"
            android:background="@drawable/bn_select_orders"
            android:focusable="false"
            android:gravity="center"
            android:text="延长收货"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_see_logistics"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_marginRight="12dp"
            android:background="@drawable/bn_select_orders"
            android:focusable="false"
            android:gravity="center"
            android:text="查看物流"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_confirm_receipt"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_marginRight="12dp"
            android:background="@drawable/bn_select_orders"
            android:focusable="false"
            android:gravity="center"
            android:text="确认收货"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>



    <LinearLayout
        android:id="@+id/lay4"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_marginBottom="7dp"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_delete_orders"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_marginRight="12dp"
            android:background="@drawable/bn_select_orders"
            android:focusable="false"
            android:gravity="center"
            android:text="删除订单"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_evaluation_order"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_marginRight="12dp"
            android:background="@drawable/bn_select_orders"
            android:focusable="false"
            android:gravity="center"
            android:text="评价订单"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>



    <LinearLayout
        android:visibility="visible"
        android:id="@+id/lay_mpt_btn"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_marginBottom="7dp"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_delete_order"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_marginRight="12dp"
            android:background="@drawable/bn_select_orders"
            android:focusable="false"
            android:gravity="center"
            android:text="删除订单"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_mpk"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingBottom="5dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="5dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/back_pop_in"
            android:focusable="false"
            android:gravity="center"
            android:text="使用免拼卡直接发货"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>






    <LinearLayout
        android:id="@+id/lay5"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_marginBottom="7dp"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_refund"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_marginRight="12dp"
            android:background="@drawable/bn_select_orders"
            android:focusable="false"
            android:gravity="center"
            android:text="退款中"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_delete_orders5"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_marginRight="12dp"
            android:background="@drawable/bn_select_orders"
            android:focusable="false"
            android:gravity="center"
            android:text="删除订单"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_append_evaluate"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_marginRight="12dp"
            android:background="@drawable/bn_select_orders"
            android:focusable="false"
            android:gravity="center"
            android:text="追加评论"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay6"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_marginBottom="7dp"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_end"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_marginRight="12dp"
            android:background="@drawable/bn_select_orders"
            android:focusable="false"
            android:gravity="center"
            android:text="已完结"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_deleteorders"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_marginRight="12dp"
            android:background="@drawable/bn_select_orders"
            android:focusable="false"
            android:gravity="center"
            android:text="删除订单"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay7"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_marginBottom="7dp"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_see_logistics7"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_marginRight="12dp"
            android:background="@drawable/bn_select_orders"
            android:focusable="false"
            android:gravity="center"
            android:text="查看物流"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_confirm_receipt7"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_marginRight="12dp"
            android:background="@drawable/bn_select_orders"
            android:focusable="false"
            android:gravity="center"
            android:text="确认收货"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>

    <!--中奖订单24小后专用，默认隐藏-->
    <LinearLayout
        android:id="@+id/lay10"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_marginBottom="7dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            android:id="@+id/tv_close_order_24"

            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_marginRight="12dp"
            android:background="@drawable/bn_select_orders"
            android:focusable="false"
            android:gravity="center"
            android:text="关闭订单"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/tv_govip_kefu_24"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_marginRight="12dp"
            android:background="@drawable/bn_select_orders"
            android:focusable="false"
            android:gravity="center"
            android:text="成为会员"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/tv_sqfh_kefu_24"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_marginRight="12dp"
            android:background="@drawable/back_pop_in"
            android:focusable="false"
            android:gravity="center"
            android:text="申请发货"
            android:textColor="@color/white"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/tv_lianxi_kefu_24"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:background="@drawable/back_pop_in"
            android:paddingBottom="5dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="5dp"
            android:text="接通微信客服"
            android:textColor="@color/white"
            android:textSize="14sp" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/lay9"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_marginBottom="7dp"
        android:orientation="horizontal">

    </LinearLayout>


    <TextView
        android:id="@+id/tv_one_buy_tuan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="7dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/back_pop_in"
        android:paddingBottom="5dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="5dp"
        android:text="邀请好友拼团"

        android:textColor="@color/white"
        android:textSize="14sp" />

    <View
        android:visibility="invisible"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#c5c5c5" />

</LinearLayout>