<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

    <RelativeLayout
        android:id="@+id/left"
         android:layout_marginLeft="8dp"
        android:layout_marginTop="9dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <View
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:background="@drawable/myinfo_back_round" />

        <com.yssj.custom.view.RoundImageButton
            android:id="@+id/img_user_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:background="@color/transparenct"
            android:clickable="false"
            android:focusableInTouchMode="false" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/shaidan_uesername"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignBottom="@id/left"
        android:layout_marginLeft="9dp"
        android:layout_toRightOf="@id/left"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/shaidan_comment_username1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF448E"
            android:textSize="@dimen/tv_size13" />

        <TextView
            android:id="@+id/shaidan_comment_huifu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="回复"
            android:textColor="#A8A8A8"
            android:textSize="@dimen/tv_size13" />

        <TextView
            android:id="@+id/shaidan_comment_username2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF448E"
            android:textSize="@dimen/tv_size13" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignBottom="@id/left"
        android:layout_alignParentRight="true"
        android:layout_marginRight="9dp"
        android:layout_marginLeft="9dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/shaidan_comment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="9dp"
            android:textColor="#A8A8A8"
            android:textSize="9sp" />

        <ImageView
            android:id="@+id/shaidan_huifu_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_huifu" />
    </LinearLayout>

    <TextView
        android:id="@+id/shaidan_comment_content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/shaidan_uesername"
        android:layout_marginBottom="9dp"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="9dp"
        android:textColor="#3E3E3E"
        android:textSize="@dimen/tv_size13" />

</RelativeLayout>