<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="274dp"
    android:layout_height="wrap_content"
    android:background="@drawable/qiandaoshuoming_dialog_back"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg"
            android:gravity="center"
            android:text="@string/share_fashion"
            android:textColor="#ffffff"
            android:textSize="@dimen/tv_size18" />

        <ImageView
            android:padding="5dp"
            android:id="@+id/icon_close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:scaleType="fitXY"
            android:src="@drawable/iconkaquanshuomclose" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/white"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="30dp"
            android:text="1.分享后进来查看的小伙伴将会自动成为你的粉丝。"
            android:textColor="#7D7D7D"
            android:textSize="@dimen/tv_size14" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="2.粉丝每次在衣蝠下单，你将可以得到商品价格*10%的现金奖励。"
            android:textColor="#7D7D7D"
            android:textSize="@dimen/tv_size14" />

        <RelativeLayout
            android:id="@+id/go_share_to_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center" >

            <ImageView
                android:id="@+id/iv_wxin_share"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="45dp"
                android:src="@drawable/invite_icon_pengyouquan"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/iv_qq_share"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="45dp"
                android:src="@drawable/invite_icon_qq"
                android:visibility="visible" />
        </RelativeLayout>

        <TextView
            android:paddingBottom="20dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:text="分享完成赚钱任务"
            android:textColor="#7D7D7D"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>