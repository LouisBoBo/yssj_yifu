<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/base_head" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/payback_order_info_bg"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="申请退货/退款"
            android:textColor="@color/white"
            android:textSize="@dimen/tv_size18" />

        <TextView
            android:id="@+id/tv_order_je"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"
            android:textSize="@dimen/tv_size16" />

        <TextView
            android:id="@+id/tv_order_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"
            android:textSize="@dimen/tv_size16" />

        <TextView
            android:id="@+id/tv_hh_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"
            android:textSize="@dimen/tv_size16" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:text="你申请了退货"
            android:textColor="@color/text1_color"
            android:textSize="@dimen/tv_size16" />

        <TextView
            android:id="@+id/tv_apply_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:lineSpacingExtra="@dimen/margin"
            android:textColor="@color/text1_color"
            android:textSize="@dimen/tv_size16" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_hh_reason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="@dimen/margin"
        android:text="退货原因 :"
        android:textColor="@color/text1_color"
        android:textSize="@dimen/tv_size16" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="卖家未同意"
        android:textColor="@color/title_color"
        android:textSize="@dimen/tv_size18" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:text="你可以选择以下方式处理"
        android:textColor="@color/text1_color"
        android:textSize="@dimen/tv_size16" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_connect_seller"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:background="@drawable/payback_cancle_bg"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="联系卖家"
            android:textColor="@color/white"
            android:textSize="@dimen/tv_size16" />
        
        <Button
            android:id="@+id/btn_payback_help"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:background="@drawable/payback_cancle_bg"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="售后帮助"
            android:textColor="@color/white"
            android:textSize="@dimen/tv_size16" />
    </LinearLayout>

</LinearLayout>