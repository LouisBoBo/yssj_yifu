        <TextView
            android:id="@+id/need_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="还差0人，赶紧邀请好友来参团吧！开团与参团都无需付款，拼团成功后记得要在规定时间内完成付款哦。"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/tv_size15"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_wxin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_wxin_circle_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/invite_icon_weixin" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:text="微信好友"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/tv_size12" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_wxin_circle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_wxin_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/invite_icon_pengyouquan"
                android:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:text="微信群"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/tv_size12" />
        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="@dimen/margin20"
        android:layout_gravity="center_horizontal"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_close"
        android:background="@drawable/withdrawal_exp_dialog_red"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin20"
            android:text="温馨提示"
            android:textColor="#FBFFA1"
            android:textSize="23dp"
            android:textStyle="bold" />


        <TextView
            android:layout_marginLeft="@dimen/margin20"
            android:layout_marginRight="@dimen/margin20"
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin20"
            android:text="该商品需要3张发货卡即可发货该商品需要3张发货卡即可发货"
            android:textColor="#FBFFA1"
            android:textSize="15dp" />


        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin15"
            android:text="您已有1张和还差2张"
            android:textColor="#FBFFA1"
            android:textSize="15dp" />


        <RelativeLayout
            android:id="@+id/rl_jia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin30"
            android:layout_marginLeft="@dimen/margin30"
            android:layout_marginRight="@dimen/margin30"
            android:layout_marginTop="@dimen/margin30">

            <ImageView
                android:id="@+id/iv_jia1"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/free_fight" />

            <ImageView
                android:id="@+id/iv_jia2"

                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/free_fight" />

            <ImageView
                android:id="@+id/iv_jia3"

                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/free_fight" />


        </RelativeLayout>


        <TextView
            android:id="@+id/bt1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="@dimen/margin25"
            android:layout_marginLeft="@dimen/margin25"
            android:layout_marginRight="@dimen/margin25"
            android:background="@drawable/continue_ling_delivergoods" />

        <TextView
            android:visibility="gone"
            android:id="@+id/bt2"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="29dp"
            android:layout_marginLeft="@dimen/margin25"
            android:layout_marginRight="@dimen/margin25"
            android:background="@drawable/direct_ling_become_member" />


    </LinearLayout>





    <ImageView
        android:id="@+id/icon_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/margin10"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/icon_close_groups" />


</LinearLayout>