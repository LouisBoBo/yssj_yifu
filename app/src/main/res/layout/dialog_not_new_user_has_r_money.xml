<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_gravity="right"
        android:layout_marginBottom="5dp"
        android:src="@drawable/free_icon_close" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_close">

        <ImageView
            android:id="@+id/iv_hongbao_bg"
            android:layout_width="300dp"
            android:layout_height="304dp"
            android:scaleType="centerCrop"
            android:src="@drawable/newestredhongbao_freeling_money" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:gravity="center"
            android:text="你有"
            android:textColor="@color/red"
            android:textSize="@dimen/tv_size15" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="¥ "
                android:textStyle="bold"
                android:textColor="@color/red"
                android:textSize="@dimen/tv_size16" />

            <TextView
                android:id="@+id/tv_r_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="100"
                android:textColor="@color/red"
                android:textSize="28sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="135dp"
            android:gravity="center"
            android:text="等待提现"
            android:textColor="@color/red"
            android:textSize="@dimen/tv_size16" />

        <TextView
            android:id="@+id/tv_txk_countdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="185dp"
            android:text="00:20:10后现金失败"
            android:textColor="#a8a8a8"
            android:textSize="14sp" />
    </FrameLayout>


</LinearLayout>