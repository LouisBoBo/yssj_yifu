<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.yssj.custom.view.ScaleImageView
            android:id="@+id/news_pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:src="@null" />

        <TextView
            android:id="@+id/tv_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/sign_active_shop_discount"
            android:gravity="center"
            android:textSize="@dimen/tv_size12"
            android:textColor="@color/white_white"
            android:text="4.5折"
            android:visibility="visible" />
        <TextView
            android:id="@+id/tv_sold"
            android:layout_width="58dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:background="#ff3f8b"
            android:gravity="center"
            android:textSize="@dimen/tv_size10"
            android:textColor="@color/white_white"
            android:text="已售101件"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/white_fanzao"
            android:orientation="vertical" >

            <TextView
                android:layout_marginLeft="6dp"
                android:id="@+id/news_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:singleLine="true"
                android:text="商品名字"
                android:textColor="#3E3E3E"
                android:ellipsize="start"
                android:textSize="@dimen/tv_size12" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:gravity="center_vertical"
                    android:text="￥199.9"
                    android:textColor="#FF3F8B"
                    android:textSize="@dimen/tv_size13" />

<!--                <TextView
                    android:id="@+id/nickback"
                    android:layout_width="56dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="6dp"
                    android:background="@drawable/bian_kuang_new"
                    android:gravity="center"
                    android:text="立省19.9"
                    android:textColor="#FF3F8B"
                    android:textSize="10sp" />-->

                <!--  <TextView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/nickback"
                    android:background="@drawable/di_small" />  -->

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:layout_marginRight="6dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="start"
                        android:text="专柜价"
                        android:textColor="#a8a8a8"
                        android:textSize="@dimen/tv_size10" />

                    <TextView
                        android:id="@+id/tv_shoppe_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:ellipsize="start"
                        android:text="￥20.0"
                        android:textColor="#a8a8a8"
                        android:textSize="@dimen/tv_size10" />
                </LinearLayout>

            </RelativeLayout>
<!--            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="6dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="start"
                    android:text="专柜价"
                    android:textColor="#a8a8a8"
                    android:textSize="@dimen/tv_size12" />

                <TextView
                    android:id="@+id/tv_shoppe_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:ellipsize="start"
                    android:text="￥20.0"
                    android:textColor="#a8a8a8"
                    android:textSize="@dimen/tv_size12" />
            </LinearLayout>-->

            <TextView
                    android:id="@+id/nickback"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#FB3B3B"
                    android:textSize="11sp" />
        </LinearLayout>
        
        
        <TextView
            android:id="@+id/tv_manufacturers"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_above="@id/ll"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="11dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:background="@drawable/shape_gray"
            android:gravity="center"
            android:textSize="@dimen/tv_size10"
            android:textColor="@color/white_white"
            android:visibility="gone" />
    </RelativeLayout>


</LinearLayout>