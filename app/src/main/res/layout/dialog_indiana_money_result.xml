<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000"
    android:orientation="vertical">
<ImageView
    android:id="@+id/indiana_win_pic"
    android:background="@drawable/indiana_gift"
    android:layout_gravity="center_horizontal"
    android:layout_width="150dp"
    android:layout_height="150dp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/result_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_groups_fail" />

        <TextView
            android:id="@+id/result_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="很遗憾，拼团未成功！"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />


    </LinearLayout>
<LinearLayout
    android:layout_gravity="center_horizontal"
    android:layout_marginBottom="@dimen/margin25"
    android:layout_marginTop="10dp"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/group_rl_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"

        android:gravity="center_vertical">

        <TextView
            android:id="@+id/groups_resule_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="很遗憾，你的拼团未能在时效内达到拼团人数，本次拼团未能成功。拼团费会在5-7个工作日内原路退回至付款账号。下次加油吧。"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/tv_size16"
            android:textStyle="bold" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/group_ll_winner_message"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:gravity="center_horizontal"
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="你参与的第170717期提现抽奖开奖啦！"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/tv_size16" />

    <TextView
        android:gravity="center_horizontal"
        android:id="@+id/tv_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="中奖号码为:1707235"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/tv_size14" />

    <TextView
        android:gravity="center_horizontal"
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="中奖者:jake"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/tv_size14" />
        <TextView
            android:gravity="center_horizontal"
            android:id="@+id/tv_notice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="再接再励哦~说不定下一个中奖的就是你哦~"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/tv_size12" />
    </LinearLayout>
</LinearLayout>
    <LinearLayout
        android:id="@+id/groups_gift_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/margin10"
      >
        <TextView
            android:id="@+id/groups_gift_btn"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:background="@drawable/shape_public_line_ffffff"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:text="查看余额"
            android:textColor="#ffffff"
            android:textSize="16sp"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/icon_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/margin10"
        android:scaleType="fitXY"
        android:src="@drawable/icon_close_groups" />


</LinearLayout>