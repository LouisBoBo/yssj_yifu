<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:background="@drawable/leave_back"
    android:orientation="vertical" >
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
     	<ImageView 
     	    android:id="@+id/icon_close"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:paddingTop="10dp"
	        android:paddingRight="10dp"
	        android:paddingLeft="10dp"
	        android:src="@drawable/icon_search_close"
	        android:layout_alignParentRight="true"/>   
    </RelativeLayout>
	<TextView
	    android:id="@+id/id_tv_titie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="确定删除该穿搭？"
        android:textColor="#3E3E3E"
        android:textSize="18sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="删除后点赞和评论将同时被删除，不可恢复哦~"
        android:textColor="#7D7D7D"
        android:textSize="14sp" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="22dp"
        android:layout_marginTop="30dp" >

        <Button
            android:id="@+id/btn_left"
            android:layout_width="115dp"
            android:layout_height="38dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/bg_tans_cancel"
            android:text="取消"
            android:textColor="#FF3F8B"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_right"
            android:layout_width="115dp"
            android:layout_height="38dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/bg_red_ok"
            android:text="确定"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
    </RelativeLayout>

</LinearLayout>