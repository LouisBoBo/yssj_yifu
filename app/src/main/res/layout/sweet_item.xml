<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/item_rl_none_comment"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="35dp"
                android:layout_height="25dp"
                android:src="@drawable/sweet_icon_shafa" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="快来抢沙发吧~"
                android:textColor="#a8a8a8"
                android:textSize="14sp" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/item_ll__comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/item_ll_hot"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <View
                android:layout_width="15dp"
                android:layout_height="1.5dp"
                android:background="#ff3f8b" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:text="热门评论"
                android:textColor="#ff3f8b"
                android:textSize="12sp" />

            <View
                android:layout_width="15dp"
                android:layout_height="1.5dp"
                android:background="#ff3f8b" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_ll_new"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <View
                android:layout_width="15dp"
                android:layout_height="1.5dp"
                android:background="#ff3f8b" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:text="最近评论"
                android:textColor="#ff3f8b"
                android:textSize="12sp" />

            <View
                android:layout_width="15dp"
                android:layout_height="1.5dp"
                android:background="#ff3f8b" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp" >

            <RelativeLayout
                android:id="@+id/item_rl_pic"
                android:layout_width="40dp"
                android:layout_height="40dp" >

                <ImageView
                    android:id="@+id/item_head_img"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:background="@color/transparenct"
                    android:clickable="false" />

                <ImageView
                    android:id="@+id/item_iv_grade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="1dp"
                    android:layout_marginRight="1dp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/item_rl_pic"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/item_tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cristina"
                    android:textColor="#3e3e3e"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/item_tv_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="广东  深圳"
                        android:textColor="#a8a8a8"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/item_tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dp"
                        android:text="5分钟前"
                        android:textColor="#a8a8a8"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/item_zan_icon"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:background="@drawable/sweet_icon_zan" />

                <TextView
                    android:id="@+id/item_zan_count"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="3dp"
                    android:gravity="center_vertical"
                    android:text="80"
                    android:textColor="#ff3f8b" />
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="这个剧超级好看"
            android:textColor="#3e3e3e"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/item_ll_contain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="#f8f8f8"
            android:orientation="vertical" >
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#e5e5e5" />
    </LinearLayout>

</LinearLayout>