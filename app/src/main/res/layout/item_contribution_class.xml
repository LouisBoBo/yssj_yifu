<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/rel_address"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="@dimen/margin14"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_user_location_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin20"
            android:background="@drawable/get_address"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_user_location_img"
            android:text="分类"
            android:textColor="#3e3e3e"
            android:textSize="@dimen/tv_size14" />

        <TextView
            android:id="@+id/tv_shouhuodizhi"
            style="@style/FontStyleNormalBlueBig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin10"
            android:layout_toLeftOf="@id/img_right_arrow2"
            android:gravity="right"
            android:textColor="#7d7d7d"
            android:textSize="@dimen/tv_size14" />

        <ImageView
            android:id="@+id/img_right_arrow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin14"
            android:background="@color/transparenct"
            android:src="@drawable/gengduo" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/line" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>