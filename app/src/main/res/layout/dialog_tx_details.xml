<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="273dp"
        android:layout_height="wrap_content"
        android:background="@drawable/qiandaoshuoming_dialog_back"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/top_100">

            <TextView
                android:id="@+id/dialog_colse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/icon_close_red" />


        </RelativeLayout>


        <LinearLayout
            android:id="@+id/indiana_ll_rule_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:visibility="gone"></LinearLayout>

        <!--<ScrollView-->
            <!--android:layout_gravity="center_horizontal"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="220dp">-->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="1.分享邀请家人，朋友或同事来衣蝠。"
                    android:textColor="#7d7d7d"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="2.好友每消费一次。你可得2元提现现金奖励。邀请越多奖励越多。"
                    android:textColor="#7d7d7d"
                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/tv3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="3.分享到3个以上微信群，成功几率提升200%。"
                    android:textColor="#7d7d7d"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/tv4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="4.可以告诉你的好友，注册即可领18元任务红包，可微信提现哦。"
                    android:textColor="#7d7d7d"
                    android:textSize="14sp" />

                <ImageView
                    android:visibility="gone"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/biaoge_2mini" />
            </LinearLayout>


        <!--</ScrollView>-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/indiana_ll_share"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <RelativeLayout

                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/iv_wxin_circle_share"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/invite_icon_weixin" />

                    <TextView
                        android:id="@+id/tv_share_count"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/shape_public_all_round"
                        android:gravity="center"
                        android:textColor="#ffffff"
                        android:textSize="12sp" />
                </RelativeLayout>

                <TextView
                    android:layout_width="76dp"
                    android:layout_height="27dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/shape_public_line_ff3f8b"
                    android:gravity="center"
                    android:text="分享"
                    android:textColor="#ff3f8b"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/indiana_ll_branch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/iv_branch"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/to_tixian" />

                    <TextView
                        android:id="@+id/tv_branch_count"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/shape_public_all_round"
                        android:gravity="center"
                        android:textColor="#ffffff"
                        android:textSize="12sp" />
                </RelativeLayout>

                <TextView
                    android:layout_width="76dp"
                    android:layout_height="27dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/shape_public_line_ff3f8b"
                    android:gravity="center"
                    android:text="去提现"
                    android:textColor="#ff3f8b"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/indiana_ll_normal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/dialog_iv_qq_share"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/icon_indiana_pic"
                    android:visibility="visible" />

                <TextView
                    android:layout_width="76dp"
                    android:layout_height="27dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/shape_public_line_ff3f8b"
                    android:gravity="center"
                    android:text="2元抽奖"
                    android:textColor="#ff3f8b"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="分享到3个群后，"
            android:textColor="@color/common_red"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="30dp"
            android:text="拿到提现奖励的几率高达98%！"
            android:textColor="@color/common_red"
            android:textSize="14sp" />

    </LinearLayout>
</LinearLayout>