<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent" >
    <RelativeLayout
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:background="@color/transparent"
    	android:padding="10dp">
        <ImageView
           android:id="@+id/withdrawal_head_iv"
           android:layout_width="38dp"
           android:layout_height="38dp"
           android:background="@color/transparenct"
           android:clickable="false"
           android:adjustViewBounds="true"
           android:src="@drawable/head_pic_04"/>
	   <TextView 
	       android:id="@+id/withdrawal_name_tv"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" 
           android:layout_gravity="center_vertical"
           android:layout_marginLeft="10dp"
           android:layout_marginRight="10dp"
           android:text="小***菇"
           android:layout_toRightOf="@id/withdrawal_head_iv"
           android:layout_centerVertical="true"
           android:maxLines="1"
           android:textSize="12sp"
           android:textColor="#7D7D7D"/>
	   <TextView 
	       android:id="@+id/withdrawal_exp_tv"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" 
           android:layout_gravity="center_vertical"
           android:layout_marginRight="8dp"
           android:text="拆红包获得提现额度拆红包获得提现额"
           android:maxLines="1"
           android:layout_toRightOf="@id/withdrawal_name_tv"
           android:layout_centerVertical="true"
           android:textSize="12sp"
           android:textColor="#7D7D7D"/>
	   <TextView
		   android:textStyle="bold"
	       android:id="@+id/withdrawal_awards_tv"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" 
           android:layout_gravity="center_vertical"
           android:text="+199元"
           android:layout_alignParentRight="true"
           android:layout_centerVertical="true"
           android:textSize="14sp"
           android:textColor="#FF3F8B"/>
    </RelativeLayout>

</RelativeLayout>
