<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_fanzao"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/item_group_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/item_group_head_pic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/image_default" />
        <TextView
            android:visibility="gone"
            android:id="@+id/item_group_no_take_notice"
            android:gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="你未参与本期夺宝哦~"
            android:textColor="#3e3e3e"
            android:textSize="16sp" />
        <LinearLayout
            android:id="@+id/item_group_ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:src="@drawable/weixintixian_chenggong_da_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="6dp"
                    android:text="已为你自动创建新团"
                    android:textColor="#3e3e3e"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="6dp"
                    android:text="还差"
                    android:textColor="#3e3e3e"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/item_group_need_people"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="1"
                    android:textColor="#ff3f8b"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="位就成团了，赶快邀请好友来参团吧！"
                    android:textColor="#3e3e3e"
                    android:textSize="16sp" />
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="28dp"
                android:gravity="center_horizontal"
                android:text="分享至"
                android:textColor="#7d7d7d"
                android:textSize="14sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_wxin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="60dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_wxin_circle_share"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/invite_icon_weixin" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="7dp"
                        android:text="微信"
                        android:textColor="#8A8A8A"
                        android:textSize="@dimen/tv_size11" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_wxin_circle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_wxin_share"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/invite_icon_pengyouquan"
                        android:visibility="visible" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="7dp"
                        android:text="朋友圈"
                        android:textColor="#8A8A8A"
                        android:textSize="@dimen/tv_size11" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分享到3个群后，成团率高达98%！"
                android:textColor="#ff3f8b"
                android:textSize="14sp" />
        </LinearLayout>
        <View
            android:id="@+id/item_group_line"
            android:layout_marginTop="28dp"
            android:background="#e5e5e5"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="28dp"
        android:id="@+id/item_group_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="第"
                android:textColor="#3e3e3e"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/item_group_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textColor="#ff3f8b"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/item_group_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="团，未满"
                android:textColor="#3e3e3e"
                android:textSize="16sp" />

        </LinearLayout>
            <TextView
                android:id="@+id/item_group_win_num"
                android:gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:textSize="14sp"
                android:textColor="#3e3e3e"
                android:text="(幸运号码：20170825232)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
<LinearLayout
    android:layout_marginTop="18dp"
    android:gravity="center_horizontal"
    android:id="@+id/item_group_container"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

</LinearLayout>
        <com.yssj.custom.view.MyGridView
            android:layout_marginTop="18dp"
            android:id="@+id/item_group_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:listSelector="@android:color/transparent"
            android:numColumns="5"
            android:verticalSpacing="10dp"></com.yssj.custom.view.MyGridView>
    </LinearLayout>

</LinearLayout>