<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f4f4f4"
    android:orientation="horizontal">
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="#ffffff"
	    android:orientation="horizontal">
	    <ImageView 
		    android:id="@+id/groups_list_img_main"
		    android:layout_width="wrap_content"
		    android:layout_height="115dp"
		    android:adjustViewBounds="true"
		    android:layout_margin="10dp"/>
		<RelativeLayout 
		    android:layout_width="match_parent"
	        android:layout_height="115dp"
	        android:layout_marginTop="10dp"
	        android:layout_marginBottom="10dp"
	        android:layout_marginRight="10dp">
	         <TextView 
		          	android:id="@+id/groups_exp_text"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"  
		            android:text=""
		            android:ellipsize="end"
		            android:singleLine="true"
		            android:textSize="@dimen/tv_size14"
		           	android:layout_centerVertical="true"
		            android:textColor="#3E3E3E" />
		    <LinearLayout 
		        android:layout_width="match_parent"
	        	android:layout_height="wrap_content"
	        	android:gravity="center_vertical"
	        	android:orientation="horizontal">
		        <com.yssj.custom.view.RoundImageButton
		            android:id="@+id/user_img_head"
		            android:layout_width="35dp"
		            android:layout_height="35dp"
		            android:focusable="false"
		            android:background="@color/transparenct"/>
		        <TextView 
		          	android:id="@+id/user_name"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"  
		            android:text=""
		            android:layout_marginLeft="5dp"
		            android:textSize="@dimen/tv_size14"
		            android:textColor="#7D7D7D" />
		        
		    </LinearLayout>
		    <RelativeLayout 
		        android:layout_width="match_parent"
	        	android:layout_height="wrap_content"
	        	android:layout_alignParentBottom="true">
		        <RelativeLayout 
		            android:layout_width="wrap_content"
	        		android:layout_height="wrap_content" 
	        		android:layout_centerVertical="true">
	        		<TextView 
	        		    android:id="@+id/pin_tuan_jia"
			            android:layout_width="wrap_content"
		        		android:layout_height="wrap_content" 
		        		android:textColor="#ff3f8b"
		        		android:textSize="@dimen/tv_size14"
		        		android:text="拼团价"/>
	        		<TextView 
	        		    android:id="@+id/groups_list_groupsprice"
			            android:layout_width="wrap_content"
		        		android:layout_height="wrap_content" 
		        		android:textColor="#ff3f8b"
		        		android:textSize="@dimen/tv_size16"
		        		android:layout_toRightOf="@id/pin_tuan_jia"
		        		android:layout_alignBaseline="@id/pin_tuan_jia"
		        		android:textStyle="bold"
		        		android:text=""/>
	        		<TextView 
	        		    android:id="@+id/dan_du_mai"
			            android:layout_width="wrap_content"
		        		android:layout_height="wrap_content" 
		        		android:layout_marginTop="3dp"
		        		android:textColor="#A8A8A8"
		        		android:textSize="@dimen/tv_size12"
		        		android:layout_below="@id/pin_tuan_jia"
		        		android:text="单独购买"/>
	        		<TextView 
	        		    android:id="@+id/groups_list_signleprice"
			            android:layout_width="wrap_content"
		        		android:layout_height="wrap_content" 
		        		android:layout_marginTop="3dp"
		        		android:textColor="#A8A8A8"
		        		android:textSize="@dimen/tv_size12"
		        		android:layout_toRightOf="@id/dan_du_mai"
		        		android:layout_alignBaseline="@id/dan_du_mai"
		        		android:text=""/>
		            
		            
		        </RelativeLayout>
		        <LinearLayout 
		            android:id="@+id/groups_ljct_ll"
		            android:layout_width="wrap_content"
	        		android:layout_height="wrap_content" 
	        		android:padding="10dp"
		            android:layout_alignParentRight="true"
		            android:orientation="horizontal"
		            android:gravity="center_vertical"
		            android:background="@drawable/shape_groups_square_list_btn">
		            <TextView 
		            android:layout_width="wrap_content"
	        		android:layout_height="wrap_content" 
	        		android:textColor="#fefefe"
	        		android:textSize="@dimen/tv_size14"
	        		android:text="@string/make_groups"/>
		            <ImageView 
			            android:layout_width="wrap_content"
		        		android:layout_height="wrap_content" 
		        		android:layout_marginLeft="3dp"
		        		android:src="@drawable/icon_go_white"/>
	        	</LinearLayout>
		    </RelativeLayout>
		    
		</RelativeLayout>
	</LinearLayout>

</LinearLayout>