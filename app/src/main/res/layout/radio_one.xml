<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lin_one"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rel_old_pass"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_login_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin"
            android:gravity="center_vertical"
            android:text="登陆密码:"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_login_pass"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/tv_login_pass"
            android:background="#00000000"
            android:gravity="center_vertical"
            android:hint="请输入登陆密码"
            android:inputType="textPassword"
            android:padding="@dimen/margin"
            android:paddingLeft="5dp"
            android:textColor="#18b4ed"
            android:textColorHint="#bdbdbd"
            android:textCursorDrawable="@null"
            android:textSize="16sp" />
    </RelativeLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#d4d5d6" />

    <RelativeLayout
        android:id="@+id/rel_pay_pass"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_pay_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="支付密码:"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_pay_pass"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/tv_pay_pass"
            android:background="#00000000"
            android:gravity="center_vertical"
            android:hint="请输入支付密码"
            android:inputType="textPassword"
            android:padding="@dimen/margin"
            android:paddingLeft="5dp"
            android:textColor="#18b4ed"
            android:textColorHint="#bdbdbd"
            android:textCursorDrawable="@null"
            android:textSize="16sp" />
    </RelativeLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#d4d5d6" />

    <RelativeLayout
        android:id="@+id/rel_confirm_pay_pass"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_confirm_pay_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="确认密码:"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_confirm_pay_pass"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/tv_confirm_pay_pass"
            android:background="#00000000"
            android:gravity="center_vertical"
            android:hint="请再次输入支付密码"
            android:inputType="textPassword"
            android:padding="@dimen/margin"
            android:paddingLeft="5dp"
            android:textColor="#18b4ed"
            android:textColorHint="#bdbdbd"
            android:textCursorDrawable="@null"
            android:textSize="16sp" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin"
        android:text="提交" />

</LinearLayout>