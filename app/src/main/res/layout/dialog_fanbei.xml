<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="274dp"
    android:layout_height="190dp"
    android:background="@drawable/bg_singn_dialog_shape"
    android:gravity="center_horizontal" >

    <TextView
        android:id="@+id/tv_what"
        android:layout_width="254dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="9dp"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:text="什么是余额翻X3倍特权？"
        android:textColor="#3E3E3E"
        android:textSize="15sp" />

    <TextView
        android:layout_width="254dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_what"
        android:text="亲,余额3倍是指在开店成功后24小时之内余额为原来余额的3倍,可直接用于购物,24小时之后余额变为原来的金额"
        android:textColor="#7D7D7D"
        android:textSize="12sp" />

    <Button
        android:layout_width="254dp"
        android:layout_height="38dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:background="@drawable/bg_red_ok"
        android:text="开启余额X3倍特权"
        android:textSize="15sp" />

</RelativeLayout>