<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView 
        android:id="@+id/tv_kefu"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:text="当前客服不在线喔~你可以继续提问或者查找想要的问题"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_horizontal"
        android:visibility="visible"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="热门问题"
            android:textColor="#2228ff" />

        <TextView
            android:id="@+id/tv_shipments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.付款后一般多久发货呢？"
            android:textColor="#2228ff" />

        <TextView
            android:id="@+id/tv_kuaidi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2.发货可以选择哪些快递呢？"
            android:textColor="#2228ff" />

        <TextView
            android:id="@+id/tv_logistics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3.如何查看我的物流信息？"
            android:textColor="#2228ff" />

        <TextView
            android:id="@+id/tv_say_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.付款后不想要了如何处理？"
            android:textColor="#2228ff" />

        <TextView
            android:id="@+id/tv_money_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5.如何申请退款？"
            android:textColor="#2228ff" />

        <TextView
            android:id="@+id/tv_more_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更多问题答疑>>"
            android:textColor="#2228ff" />
    </LinearLayout>

    <LinearLayout
               android:id="@+id/container"
               android:layout_marginTop="10dp"
               android:layout_height="wrap_content"
               android:layout_width="330dp"
                android:layout_gravity="center_horizontal"
               android:orientation="vertical"
              android:background="@drawable/server_back"
               ></LinearLayout>
</LinearLayout>