<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_gravity="right"
        android:layout_marginBottom="5dp"
        android:src="@drawable/free_icon_close" />

    <RelativeLayout
        android:id="@+id/rl"
        android:paddingRight="@dimen/margin30"
        android:paddingLeft="@dimen/margin30"
        android:layout_width="wrap_content"
        android:layout_height="320dp"
        android:background="@drawable/bg_singn_dialog_shape"
        android:orientation="vertical">

        <ImageView
            android:layout_width="220dp"
            android:layout_height="255dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin20"
            android:src="@drawable/zuanshi_update_dishi" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/margin15"
            android:text="00:10:45后失效"
            android:textColor="@color/common_red"
            android:textSize="14sp" />

    </RelativeLayout>


</LinearLayout>