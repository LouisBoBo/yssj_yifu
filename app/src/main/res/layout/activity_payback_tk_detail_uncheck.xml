<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/base_head" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/payback_order_info_bg"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="申请退款"
            android:textColor="@color/white"
            android:textSize="@dimen/tv_size18" />

        <TextView
            android:id="@+id/tv_order_je"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"
            android:textSize="@dimen/tv_size15" />

        <TextView
            android:id="@+id/tv_order_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"
            android:textSize="@dimen/tv_size15" />

        <TextView
            android:id="@+id/tv_apply_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"
            android:textSize="@dimen/tv_size15" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="等待商家处理"
        android:textColor="@color/title_color"
        android:textSize="@dimen/tv_size18" />

    <TextView
        android:id="@+id/tv_end_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="20dp"
        android:lineSpacingExtra="@dimen/margin"
        android:textColor="@color/text1_color"
        android:textSize="@dimen/tv_size15" />

    <Button
        android:id="@+id/btn_payback_cancle"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/payback_cancle_bg"
        android:gravity="center"
        android:text="取消退款"
        android:textColor="@color/white"
        android:textSize="@dimen/tv_size16" />
    
    <Button
        android:id="@+id/btn_view_record"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/payback_view_tk_record"
        android:gravity="center"
        android:text="查看退款记录！"
        android:visibility="gone"
        android:textColor="@color/text1_color"
        android:textSize="@dimen/tv_size16" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tv_th"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="你申请了退款"
            android:textColor="@color/text1_color"
            android:textSize="@dimen/tv_size15" />

        <TextView
            android:id="@+id/tv_apply_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:textColor="@color/text1_color"
            android:textSize="@dimen/tv_size15" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/margin"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tv_tk_yy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="退款原因: "
            android:textColor="@color/text1_color"
            android:textSize="@dimen/tv_size15" />

        <TextView
            android:id="@+id/tv_hh_reason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@id/tv_tk_yy"
            android:textColor="@color/text1_color"
            android:textSize="@dimen/tv_size15" />
    </RelativeLayout>

</LinearLayout>