<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#00000000"
    android:orientation="vertical"
    android:paddingLeft="@dimen/margin18"
    android:paddingRight="@dimen/margin18">




    <LinearLayout
        android:id="@+id/groups_gift_ll"
        android:layout_width="231dp"
        android:layout_height="285dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-10dp"
        android:layout_marginBottom="@dimen/margin10"
        android:background="@drawable/groups_result_gift"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/margin10"
            android:layout_marginTop="100dp"
            android:layout_marginRight="@dimen/margin10"
            android:gravity="center_horizontal"
            android:text="恭喜拼单成功"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/tv_size16"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/groups_gift_content_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/margin10"
            android:layout_marginTop="@dimen/margin10"
            android:layout_marginRight="@dimen/margin10"
            android:gravity="center_horizontal"
            android:text="现在可以去开启"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/tv_size14"
            android:textStyle="bold"
            android:visibility="visible" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tx_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30"
                android:textColor="#ffff00"
                android:textSize="@dimen/tv_size20"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元提现啦！"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/tv_size14" />
        </LinearLayout>
        <TextView

            android:id="@+id/tv_go_sign"
            android:layout_width="140dp"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_share_gold"
            android:gravity="center"
            android:text="去提现"
            android:textColor="#F85552"
            android:textSize="16sp" />

    </LinearLayout>





</LinearLayout>


