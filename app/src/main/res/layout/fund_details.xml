<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mx"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/base_head" />

    <RadioGroup
        android:id="@+id/rg_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/rb_trade"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:padding="@dimen/margin"
            android:text="交易"
            android:textColor="@color/selector_black_pink_text"
            android:textSize="@dimen/tv_size18" />

        <RadioButton
            android:id="@+id/rb_withdraw"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:padding="@dimen/margin"
            android:text="提现"
            android:textColor="@color/selector_black_pink_text"
            android:textSize="@dimen/tv_size18" />

        <RadioButton
            android:id="@+id/rb_refund"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:padding="@dimen/margin"
            android:text="售后"
            android:textColor="@color/selector_black_pink_text"
            android:textSize="@dimen/tv_size18" />

        <RadioButton
            android:id="@+id/rb_rebate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:padding="@dimen/margin"
            android:text="余额"
            android:textColor="@color/selector_black_pink_text"
            android:textSize="@dimen/tv_size18" />
    </RadioGroup>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0.3dp"
        android:background="@drawable/line" />

    <FrameLayout
        android:id="@+id/fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rg_group" >
    </FrameLayout>

</LinearLayout>