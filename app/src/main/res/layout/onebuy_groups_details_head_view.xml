<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical">
    <!-- 倒计时 -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin10"
        android:layout_marginTop="@dimen/margin20"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin10"
            android:text="剩余:"
            android:textColor="#3E3E3E"
            android:textSize="@dimen/tv_size14" />

        <!--<TextView
            android:id="@+id/time_tv_days"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/back_time_bg"
            android:gravity="center"
            android:text="00"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/tv_size16" />-->

        <!-- <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="2dp"
             android:layout_marginRight="20dp"
             android:text="还有:"
             android:textColor="#7d7d7d"
             android:textSize="@dimen/tv_size12" />-->

        <TextView
            android:id="@+id/time_tv_hours"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/back_time_bg"
            android:gravity="center"
            android:text="00"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/tv_size16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:text="时"
            android:textColor="#7d7d7d"
            android:textSize="@dimen/tv_size12" />

        <TextView
            android:id="@+id/time_tv_minutes"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/back_time_bg"
            android:gravity="center"
            android:text="00"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/tv_size16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:text="分"
            android:textColor="#7d7d7d"
            android:textSize="@dimen/tv_size12" />

        <TextView
            android:id="@+id/time_tv_seconds"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/back_time_bg"
            android:gravity="center"
            android:text="00"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/tv_size16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:gravity="center"
            android:text="秒"
            android:textColor="#7d7d7d"
            android:textSize="@dimen/tv_size12" />
    </LinearLayout>

    <LinearLayout

        android:id="@+id/intivate_content_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:src="@drawable/icon_groups_tz" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邀请没买过衣蝠商品的好友哦！"
            android:textColor="#FB3B3B"
            android:textSize="@dimen/tv_size16"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_all_header_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"></LinearLayout>


    <RelativeLayout
        android:id="@+id/intivate_need_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/need_people_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="还差"
            android:textColor="#3E3E3E"
            android:textSize="@dimen/tv_size16"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/need_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/need_people_tv1"
            android:layout_toRightOf="@id/need_people_tv1"
            android:text="0"
            android:textColor="#FF3F8B"
            android:textSize="@dimen/tv_size20"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/need_people_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/need_people_tv1"
            android:layout_toRightOf="@id/need_people"
            android:text="人，赶紧邀请好友来参团吧！"
            android:textColor="#3E3E3E"
            android:textSize="@dimen/tv_size16"
            android:textStyle="bold" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/margin30"
        android:background="#E5E5E5" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/pt_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin10"
            android:text="拼团须知："
            android:textColor="#3E3E3E"
            android:textSize="@dimen/tv_size14" />

        <TextView
            android:id="@+id/pt_tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/pt_tv"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/margin15"
            android:layout_marginRight="@dimen/margin10"
            android:text="· 人不满退款"
            android:textColor="#7D7D7D"
            android:textSize="@dimen/tv_size12" />

        <TextView
            android:id="@+id/pt_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/pt_tv"
            android:layout_marginLeft="@dimen/margin15"
            android:layout_toLeftOf="@id/pt_tv3"
            android:text="· 人满付款发货"
            android:textColor="#7D7D7D"
            android:textSize="@dimen/tv_size12" />

        <TextView
            android:id="@+id/pt_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/pt_tv"
            android:layout_marginLeft="@dimen/margin15"
            android:layout_toLeftOf="@id/pt_tv2"
            android:text="· 邀请好友参团"
            android:textColor="#7D7D7D"
            android:textSize="@dimen/tv_size12" />

    </RelativeLayout>

</LinearLayout>