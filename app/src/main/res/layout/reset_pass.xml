<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" 
    android:id="@+id/denglumima"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin"
        android:orientation="vertical" >

        <include layout="@layout/base_head" />

         <RelativeLayout
            android:id="@+id/rel_old_pass"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/et_old_pass"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin10"
                android:layout_marginLeft="@dimen/margin20"
                android:layout_marginRight="@dimen/margin20"
                android:layout_marginTop="@dimen/margin10"
                android:background="@drawable/common_edittext_bg"
                android:gravity="center_vertical"
                android:hint="当前密码"
                android:inputType="textPassword"
                android:padding="@dimen/margin"
                android:paddingLeft="5dp"
                android:textColor="@color/title_color"
                android:textColorHint="#bdbdbd"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/tv_size18" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rel_new_pass"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/et_new_pass"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin10"
                android:layout_marginLeft="@dimen/margin20"
                android:layout_marginRight="@dimen/margin20"
                android:layout_marginTop="@dimen/margin10"
                android:background="@drawable/common_edittext_bg"
                android:gravity="center_vertical"
                android:hint="新密码"
                android:inputType="textPassword"
                android:padding="@dimen/margin"
                android:paddingLeft="5dp"
                android:textColor="@color/title_color"
                android:textColorHint="#bdbdbd"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/tv_size18" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rel_confirm_new_pass"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/et_confirm_new_pass"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin10"
                android:layout_marginLeft="@dimen/margin20"
                android:layout_marginRight="@dimen/margin20"
                android:layout_marginTop="@dimen/margin10"
                android:background="@drawable/common_edittext_bg"
                android:gravity="center_vertical"
                android:hint="确认新密码"
                android:inputType="textPassword"
                android:padding="@dimen/margin"
                android:paddingLeft="5dp"
                android:textColor="@color/title_color"
                android:textColorHint="#bdbdbd"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/tv_size18" />
        </RelativeLayout> 
    </LinearLayout>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/et_login_height"
        android:layout_marginLeft="@dimen/margin20"
        android:layout_marginRight="@dimen/margin20"
        android:layout_marginTop="30dp"
        android:background="@drawable/u17"
        android:text="确认提交"
        android:textSize="@dimen/tv_size19"
        android:textColor="@color/white" />

</LinearLayout>