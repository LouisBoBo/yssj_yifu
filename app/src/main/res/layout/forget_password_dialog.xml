<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="247dp"
    android:layout_height="156dp"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/xunbao_dialog_shape"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="注册提示"
        android:textColor="#3e3e3e"
        android:textSize="@dimen/tv_size17" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="该手机号已被注册啦~"
        android:textColor="#7d7d7d"
        android:textSize="@dimen/tv_size14" />

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/go_upload"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_marginRight="7dp"
            android:background="@drawable/bg_singn_button_right_shape_zhuce"
            android:gravity="center"
            android:text="去登录"
            android:textColor="#ff3f8b" />

        <TextView
            android:id="@+id/go_password"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_marginLeft="7dp"
            android:background="@drawable/bg_singn_button_left_shape_zhuce"
            android:gravity="center"
            android:text="找回密码"
            android:textColor="#ffffff" />
    </LinearLayout>

</LinearLayout>