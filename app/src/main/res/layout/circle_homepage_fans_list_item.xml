<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin"
    android:background="@color/white" >

    <com.yssj.custom.view.RoundImageButton
        android:id="@+id/rib_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:background="@color/transparenct" 
        android:layout_marginBottom="@dimen/margin10"
        android:layout_marginLeft="@dimen/margin20"
        android:layout_marginTop="@dimen/margin"/>

    <ImageButton
        android:id="@+id/ibtn_attention"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin10"
        android:background="@color/transparenct"
        android:padding="8dp"
        android:src="@drawable/circle_join_default" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/margin20"
        android:layout_marginLeft="@dimen/margin20"
        android:layout_marginTop="@dimen/margin"
        android:layout_toLeftOf="@id/ibtn_attention"
        android:layout_toRightOf="@id/rib_img"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EMOTO"
            android:textColor="@color/title_color"
            android:textSize="@dimen/tv_size18" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin5"
            android:layout_marginTop="@dimen/margin5"
            android:singleLine="true"
            android:text="同在我们爱自拍"
            android:textColor="@color/text_color"
            android:textSize="@dimen/tv_size14" />

       <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_dynamic_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="动态:1533"
                android:textColor="@color/text_color"
                android:textSize="@dimen/tv_size14" />

            <TextView
                android:id="@+id/tv_fans_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin"
                android:text="粉丝:558"
                android:textColor="@color/text_color"
                android:textSize="@dimen/tv_size14" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>