<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="273dp"
        android:layout_height="403dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
       />
    <View 
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="#000000"
        />

    <LinearLayout
        android:id="@+id/wenzi"
        android:layout_width="match_parent"
        android:layout_height="205dp"
        android:background="#ffffff"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/rl_comm_back_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="35dp"
            android:layout_marginTop="18dp" >

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="分享美衣赚"
                android:textColor="#7D7D7D"
                android:textSize="@dimen/tv_size17" />

            <TextView
                android:id="@+id/kick_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv1"
                android:text="15"
                android:textColor="#ff3f8b"
                android:textSize="29sp" />
             <TextView
                android:id="@+id/tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/kick_back"
                android:text="元"
                android:textColor="#ff3f8b"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv4"
                android:text="零花钱"
                android:textColor="#7D7D7D"
                android:textSize="@dimen/tv_size17" />
            
            <RelativeLayout 
                android:id="@+id/rl_fw"
                android:layout_width="40dp"
                android:layout_height="30dp"
                 android:layout_alignTop="@id/tv3"
                 android:layout_alignBottom="@id/tv3"
                 android:layout_toRightOf="@id/tv3"
                  android:layout_centerInParent="true"
                  android:layout_marginLeft="10dp">
            <TextView 
                android:id="@+id/img_why"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/wen_gray"
                 android:paddingTop="2dp"
                 android:layout_centerInParent="true"/>
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <LinearLayout

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/iv_wxin_circle_share"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/invite_icon_weixin" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:text="微信"
                    android:textColor="#8A8A8A"
                    android:textSize="@dimen/tv_size11" />
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll_wxin_circle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_wxin_share"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/invite_icon_pengyouquan"
                    android:visibility="visible" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:text="朋友圈"
                    android:textColor="#8A8A8A"
                    android:textSize="@dimen/tv_size11" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_qq"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/iv_qq_share"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/qq_space"
                    android:visibility="visible" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:text="QQ空间"
                    android:textColor="#8A8A8A"
                    android:textSize="@dimen/tv_size11" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_sina_share"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/img_sina_share"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_wxin"
            android:layout_width="274dp"
            android:layout_height="42dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_green_ok">
            <!--微信好友-->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/icon_wechat_touming"
                android:visibility="visible" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点我分享到微信群"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_cancal"
            android:layout_width="274dp"
            android:layout_height="38dp"
            android:layout_gravity="center_horizontal"
           	android:layout_marginTop="15dp"
            android:background="@drawable/bg_singn_button_left_shape_quxiao"
            android:gravity="center"
            android:text="取消"
            android:textColor="#7D7D7D"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>