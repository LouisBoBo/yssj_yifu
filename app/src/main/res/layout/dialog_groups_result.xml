<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/margin18"
    android:paddingRight="@dimen/margin18"
    android:background="#00000000"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/result_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_groups_fail" />

        <TextView
            android:id="@+id/result_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="很遗憾，拼团未成功！"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />


    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/margin30"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/groups_resule_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="很遗憾，你的拼团未能在时效内达到拼团人数，本次拼团未能成功。拼团费会在5-7个工作日内原路退回至付款账号。下次加油吧。"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/tv_size14"
            android:textStyle="bold" />

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/groups_gift_ll"
        android:layout_width="231dp"
        android:layout_height="274dp"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/margin10"
        android:layout_marginTop="-10dp"
        android:background="@drawable/groups_result_gift"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin10"
            android:layout_marginRight="@dimen/margin10"
            android:layout_marginTop="105dp"
            android:text="衣蝠赚钱小任务"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/tv_size14"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/groups_gift_content_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin10"
            android:layout_marginRight="@dimen/margin10"
            android:layout_marginTop="115dp"
            android:text="今日又更新了X个任务,"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/tv_size14" />
        <TextView
            android:id="@+id/groups_gift_content_yuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin10"
            android:layout_marginRight="@dimen/margin10"
            android:text="共计XX元现金等你拿哦。"
            android:textColor="#FFFFFF"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:textSize="@dimen/tv_size14" />
        <TextView
            android:id="@+id/groups_gift_btn"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_share_gold"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:text="去赚钱"
            android:textColor="#F85552"
            android:textSize="16sp"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/icon_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/margin10"
        android:scaleType="fitXY"
        android:src="@drawable/icon_close_groups" />


</LinearLayout>