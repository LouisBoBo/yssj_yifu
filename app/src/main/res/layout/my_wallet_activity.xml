<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mybg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white_fanzao">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/base_head" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:orientation="horizontal">


                <!--最后版本-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="可提现余额"
                        android:textColor="@color/common_red"
                        android:textSize="17sp" />


                    <TextView
                        android:id="@+id/tv_yue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="¥ 0"
                        android:textColor="#ff3f8b"
                        android:textSize="34sp"
                        android:textStyle="bold"
                        android:visibility="visible" />

                </LinearLayout>


            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/margin15"
            android:layout_marginTop="@dimen/margin25"
            android:background="@drawable/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_my_shouyi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="0.00"
                        android:textColor="@color/common_red"
                        android:textSize="24sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@id/tv_my_shouyi"
                        android:layout_toRightOf="@id/tv_my_shouyi"
                        android:includeFontPadding="false"
                        android:text="元"
                        android:textColor="@color/common_red"
                        android:textSize="15sp" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="购物余额"
                    android:textColor="@color/common_red"
                    android:textSize="16sp" />

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:background="@color/common_red" />


            <LinearLayout
                android:id="@+id/ll_yj"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_keyixian_shouyi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="0.00"
                        android:textColor="@color/common_red"
                        android:textSize="24sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@id/tv_keyixian_shouyi"
                        android:layout_toRightOf="@id/tv_keyixian_shouyi"
                        android:includeFontPadding="false"
                        android:text="元"
                        android:textColor="@color/common_red"
                        android:textSize="15sp" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的佣金"
                    android:textColor="@color/common_red"
                    android:textSize="16sp" />

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="@dimen/margin10"
            android:layout_marginBottom="@dimen/margin20"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:paddingBottom="7dp"
                android:paddingTop="7dp"
                android:gravity="center"
                android:id="@+id/tv_yjtx"
                android:layout_marginRight="@dimen/margin5"
                android:layout_width="0dp"
                android:text="佣金提现"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:background="@drawable/btn_back_red"
                android:textSize="18sp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/rel_withdrawal"
                android:paddingBottom="7dp"
                android:paddingTop="7dp"
                android:gravity="center"
                android:layout_marginLeft="@dimen/margin5"
                android:layout_weight="1"
                android:layout_alignParentRight="true"
                android:layout_width="0dp"
                android:text="余额提现"
                android:textColor="@color/white"
                android:background="@drawable/btn_back_red"
                android:textSize="18sp"
                android:visibility="gone"
                android:layout_height="wrap_content" />

        </LinearLayout>








        <View
            android:layout_width="match_parent"
            android:layout_height="13dp"
            android:background="@drawable/line" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rel_man_sale"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="@dimen/margin">

                <TextView
                    android:id="@+id/tv_man_sale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin15"
                    android:drawableLeft="@drawable/sale_manager"
                    android:drawablePadding="@dimen/margin15"
                    android:gravity="center"
                    android:text="销售管理"
                    android:textColor="@color/title_color"
                    android:textSize="@dimen/tv_size18" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin25"
                    android:background="@color/transparenct"
                    android:src="@drawable/gengduo" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.3dp"
                android:background="@drawable/line" />

            <RelativeLayout
                android:id="@+id/rel_fina_detail"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="@dimen/margin">

                <TextView
                    android:id="@+id/tv_fina_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin15"
                    android:drawableLeft="@drawable/account_detail"
                    android:drawablePadding="@dimen/margin15"
                    android:gravity="center"
                    android:text="账户明细"
                    android:textColor="@color/title_color"
                    android:textSize="@dimen/tv_size18" />

                <ImageView
                    android:id="@+id/tv_my_favour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin25"
                    android:background="@color/transparenct"
                    android:src="@drawable/gengduo" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.3dp"
                android:background="@drawable/line" />

            <RelativeLayout
                android:id="@+id/rel_my_coupons"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="@dimen/margin"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_my_coupons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin15"
                    android:drawableLeft="@drawable/my_coupons"
                    android:drawablePadding="@dimen/margin15"
                    android:gravity="center"
                    android:text="我的券"
                    android:textColor="@color/title_color"
                    android:textSize="@dimen/tv_size18" />

                <ImageView
                    android:id="@+id/iv_arr1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin25"
                    android:background="@color/transparenct"
                    android:src="@drawable/gengduo" />

                <TextView
                    android:id="@+id/tv_my_coupons_counts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin20"
                    android:layout_toLeftOf="@id/iv_arr1"
                    android:gravity="center"
                    android:textColor="@color/text1_color"
                    android:textSize="@dimen/tv_size18" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.3dp"
                android:background="@drawable/line"
                android:visibility="gone" />

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/rel_my_card"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="@dimen/margin">

                <TextView
                    android:id="@+id/tv_my_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin15"
                    android:drawableLeft="@drawable/my_bank_card"
                    android:drawablePadding="@dimen/margin15"
                    android:gravity="center"
                    android:text="我的银行卡"
                    android:textColor="@color/title_color"
                    android:textSize="@dimen/tv_size18" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin25"
                    android:background="@color/transparenct"
                    android:src="@drawable/gengduo" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.3dp"
                android:background="@drawable/line" />

            <RelativeLayout
                android:id="@+id/rel_pay_pass"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="@dimen/margin">

                <TextView
                    android:id="@+id/tv_pay_pass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin15"
                    android:drawableLeft="@drawable/pay_password_icon"
                    android:drawablePadding="@dimen/margin15"
                    android:gravity="center"
                    android:text="支付密码"
                    android:textColor="@color/title_color"
                    android:textSize="@dimen/tv_size18" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin25"
                    android:background="@color/transparenct"
                    android:src="@drawable/gengduo" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.3dp"
                android:background="@drawable/line" />


            <View
                android:layout_width="fill_parent"
                android:layout_height="0.3dp"
                android:background="@drawable/line" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>