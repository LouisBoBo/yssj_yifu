                android:layout_marginBottom="10dp"
                android:layout_marginLeft="55dp"
                android:ellipsize="end"
                android:maxLines="4"
                android:text=""
                android:textColor="#3E3E3E"
                android:textSize="14sp"
                android:visibility="visible" />

