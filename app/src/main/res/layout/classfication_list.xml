<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <View
        android:id="@+id/top_divider_line"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#F0F0F0" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/classfication_title_category_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="流行趋势"
            android:textColor="#3E3E3E"
            android:textSize="@dimen/tv_size14" />

        <View
            android:layout_width="34dp"
            android:layout_height="0.5dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/classfication_title_category_a"
            android:background="#3E3E3E" />

        <View
            android:layout_width="34dp"
            android:layout_height="0.5dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/classfication_title_category_a"
            android:background="#3E3E3E" />
    </RelativeLayout>

    <com.yssj.custom.view.MyGridView
        android:id="@+id/gv_classfication"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:numColumns="4"
        android:divider="#00000000"
        android:listSelector="#00000000"
        android:scrollbars="none" >
    </com.yssj.custom.view.MyGridView>

</LinearLayout>