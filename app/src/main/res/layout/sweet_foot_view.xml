<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/foot_rl_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="相关推荐"
            android:textColor="#ff3f8b"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/foot_tv_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawableRight="@drawable/gogogo"
            android:text="更多"
            android:drawablePadding="6dp"
            android:textColor="#ff3f8b"
            android:textSize="14sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/foot_ll1"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/foot_iv_pic1"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:background="#ff0000" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp" >

            <TextView
                android:id="@+id/foot_tv_content1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="给大家分享一下这个好玩的东西哦"
                android:textColor="#3e3e3e"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/foot_tv_time1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="2017年01月21日  8:20"
                android:textColor="#a8a8a8"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/foot_view1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e5e5e5" />

    <LinearLayout
        android:id="@+id/foot_ll2"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/foot_iv_pic2"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:background="#ff0000" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp" >

            <TextView
                android:id="@+id/foot_tv_content2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="给大家分享一下这个好玩的东西哦"
                android:textColor="#3e3e3e"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/foot_tv_time2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="2017年01月21日  8:20"
                android:textColor="#a8a8a8"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/foot_view2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e5e5e5" />

    <LinearLayout
        android:id="@+id/foot_ll3"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/foot_iv_pic3"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:background="#ff0000" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp" >

            <TextView
                android:id="@+id/foot_tv_content3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="给大家分享一下这个好玩的东西哦"
                android:textColor="#3e3e3e"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/foot_tv_time3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="2017年01月21日  8:20"
                android:textColor="#a8a8a8"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/foot_view3"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e5e5e5" />

</LinearLayout>