<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white" >

    <TextView
        android:id="@+id/tv_zero_shop_words"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/margin12"
        android:layout_marginLeft="@dimen/margin20"
        android:layout_marginTop="@dimen/margin5"
        android:text="| 购买需抵扣2000积分 首次购买免积分"
        android:textColor="@color/pink_color"
        android:textSize="@dimen/tv_size16"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/rl_zero_shop_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_zero_shop_words"
        android:background="#ffd5e6"
        android:paddingBottom="5dp"
        android:paddingTop="5dp" >

        <ImageView
            android:id="@+id/iv_zero_shop_hot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin10"
            android:src="@drawable/zero_shop_hot"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_package_kind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_zero_shop_hot"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin5"
            android:layout_toRightOf="@id/iv_zero_shop_hot"
            android:textColor="@color/title_color"
            android:textSize="@dimen/tv_size13"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_package_kind_tou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/tv_package_kind"
            android:layout_toRightOf="@id/tv_package_kind"
             android:layout_centerVertical="true"
            android:textColor="#ff3f8c"
            android:textSize="@dimen/tv_size13" />

        <ProgressBar
            
            android:id="@+id/pb_allowance_count_zong"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="100dp"
            android:layout_height="22dp"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="42dp"
            android:max="100"
            android:progress="50"
            android:progressDrawable="@drawable/zero_shop_progressbar"
            android:visibility="visible" />

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="22dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/margin15" >

            <TextView
                android:id="@+id/tv_allowance_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:textColor="@color/white" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_zero_shop_postage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin15"
            android:paddingBottom="2dp"
            android:textColor="@color/title_color"
            android:textSize="@dimen/tv_size13" />

        <TextView
            android:id="@+id/tv_zero_shop_postage_tou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/tv_zero_shop_postage"
            android:layout_toLeftOf="@id/tv_zero_shop_postage"
            android:textColor="@color/title_color"
            android:textSize="@dimen/tv_size13" />
    </RelativeLayout>

    <View
        android:id="@+id/v_line"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_below="@id/rl_zero_shop_top"
        android:background="@color/background_gray" />

   

    <RelativeLayout
        android:id="@+id/rl_zero_shop_product1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/v_line"
        android:layout_marginTop="@dimen/margin10" >

        <ImageView
            android:id="@+id/img_zero_shop_product1"
            android:layout_width="134dp"
            android:layout_height="134dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/margin18"
            android:background="#00000000"
            android:scaleType="centerInside" />

        <ProgressBar
            android:id="@+id/pb_allowance_count"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="134dp"
            android:layout_height="24dp"
            android:layout_alignBottom="@id/img_zero_shop_product1"
            android:layout_alignRight="@id/img_zero_shop_product1"
            android:max="100"
            android:progress="50"
            android:progressDrawable="@drawable/zero_shop_progressbar" />

        <RelativeLayout
            android:id="@+id/rl_pb_product"
            android:layout_width="134dp"
            android:layout_height="24dp"
            android:layout_alignBottom="@id/img_zero_shop_product1"
            android:layout_alignRight="@id/img_zero_shop_product1" >

            <TextView
                android:id="@+id/tv_29_allowance_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:textSize="@dimen/tv_size14" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_zero_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/margin20"
            android:layout_marginRight="@dimen/margin20"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/img_zero_shop_product1"
            android:ellipsize="end"
            android:lineSpacingExtra="3dp"
            android:maxLines="2"
            android:textColor="@color/title_color"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_zero_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_zero_product_name"
            android:layout_below="@+id/tv_zero_product_name"
            android:layout_marginTop="20dp"
            android:textColor="@color/pink_color"
            android:textSize="@dimen/tv_size16"
             />

        <TextView
            android:id="@+id/tv_free_postage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/tv_zero_product_price"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@id/tv_zero_product_price"
            android:background="@drawable/free_postage"
            android:gravity="center_horizontal"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:textColor="@color/white"
            android:textSize="@dimen/tv_size15"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_zero_price_outdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_zero_product_price"
            android:layout_below="@+id/tv_zero_product_price"
            android:layout_marginTop="20dp"
            android:textColor="@color/gray_color"
            android:textSize="@dimen/tv_size15" />

        <TextView
            android:id="@+id/tv_purchase_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/tv_zero_price_outdate"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin20"
            android:textColor="@color/gray_color"
            android:textSize="@dimen/tv_size15" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_zero_shop_product2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_zero_shop_product1"
        android:layout_marginTop="10dp" >

        <ImageView
            android:id="@+id/img_zero_shop_product2"
            android:layout_width="134dp"
            android:layout_height="134dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/margin18"
            android:background="#00000000"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/tv_zero_product_name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/margin20"
            android:layout_marginRight="@dimen/margin20"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/img_zero_shop_product2"
            android:ellipsize="end"
            android:lineSpacingExtra="3dp"
            android:maxLines="2"
            android:textColor="@color/title_color"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_zero_product_price2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_zero_product_name2"
            android:layout_below="@+id/tv_zero_product_name2"
            android:layout_marginTop="20dp"
            android:textColor="@color/pink_color"
            android:textSize="@dimen/tv_size16"
            />

        <TextView
            android:id="@+id/tv_zero_price_outdate2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_zero_product_price2"
            android:layout_below="@+id/tv_zero_product_price2"
            android:layout_marginTop="20dp"
            android:textColor="@color/gray_color"
            android:textSize="@dimen/tv_size15" />

        <TextView
            android:id="@+id/tv_purchase_num2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/tv_zero_price_outdate2"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin20"
            android:textColor="@color/gray_color"
            android:textSize="@dimen/tv_size15" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_zero_shop_product3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_zero_shop_product2"
        android:layout_marginTop="10dp" >

        <ImageView
            android:id="@+id/img_zero_shop_product3"
            android:layout_width="134dp"
            android:layout_height="134dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/margin18"
            android:background="#00000000"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/tv_zero_product_name3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/margin20"
            android:layout_marginRight="@dimen/margin20"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/img_zero_shop_product3"
            android:ellipsize="end"
            android:lineSpacingExtra="3dp"
            android:maxLines="2"
            android:textColor="@color/title_color"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_zero_product_price3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_zero_product_name3"
            android:layout_below="@+id/tv_zero_product_name3"
            android:layout_marginTop="20dp"
            android:textColor="@color/pink_color"
            android:textSize="@dimen/tv_size16"
          />

        <TextView
            android:id="@+id/tv_zero_price_outdate3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_zero_product_price3"
            android:layout_below="@+id/tv_zero_product_price3"
            android:layout_marginTop="20dp"
            android:textColor="@color/gray_color"
            android:textSize="@dimen/tv_size15" />

        <TextView
            android:id="@+id/tv_purchase_num3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/tv_zero_price_outdate3"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin20"
            android:textColor="@color/gray_color"
            android:textSize="@dimen/tv_size15" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/container_item"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_zero_shop_product3"
        android:layout_marginTop="@dimen/margin"
        android:focusable="false"
        android:orientation="vertical" >
    </LinearLayout>

    <View
        android:id="@+id/v_huisequyu"
        android:layout_width="match_parent"
        android:layout_height="9dp"
        android:layout_below="@id/container_item"
        android:layout_marginTop="5dp"
        android:background="@color/background_gray"
        android:visibility="gone" />

</RelativeLayout>