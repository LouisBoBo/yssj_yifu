<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white_fanzao"
    android:descendantFocusability="afterDescendants" >

   


    <LinearLayout
        android:id="@+id/lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin5"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingLeft="@dimen/margin10" >

   

  

        <RelativeLayout
            android:id="@+id/l1"
            android:layout_width="match_parent"
            android:layout_height="78.7dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin" >

            <!-- 删除按钮 重新加入时显示 -->

            <TextView
                android:id="@+id/new_delete_cart"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/shopcart_icon_close" />
            <!-- 分享按钮 -->

            <Button
                android:id="@+id/btn_share"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="2dp"
                android:layout_marginRight="@dimen/margin10"
                android:background="#ff3f8b"
                android:clickable="true"
                android:focusable="false"
                android:gravity="center"
                android:text="智能\n分享"
                android:textColor="#fff"
                android:textSize="@dimen/tv_size13"
              />

          

      

            <RelativeLayout
                android:layout_marginTop="28dp"
                android:id="@+id/size_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_goods_name"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="@dimen/marginsb5" >

                <TextView
                    android:id="@+id/tv_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="颜色：黑白"
                    android:textColor="#989898"
                    android:textSize="@dimen/tv_size12" />

                <TextView
                    android:id="@+id/tv_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/tv_color"
                    android:layout_marginLeft="@dimen/margin16"
                    android:layout_toRightOf="@+id/tv_color"
                    android:text="尺寸：XL"
                    android:textColor="#989898"
                    android:textSize="@dimen/tv_size12" />

                <TextView
                    android:id="@+id/tv_item_nprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="12dp"
                    android:text="￥469.00"
                    android:textColor="#a8a8a8"
                    android:textSize="@dimen/tv_size11" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/price_lay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_goods_name"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="2dp"
                android:layout_toLeftOf="@id/btn_share" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/marginsb5"
                    android:text="￥195.00"
                    android:textColor="#3e3e3e"
                    android:textSize="@dimen/tv_size12"
                   />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥469.00"
                    android:textColor="#a8a8a8"
                    android:textSize="@dimen/tv_size11"
                   />

                <TextView
                    android:id="@+id/goods_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:text="X2"
                    android:textColor="#3e3e3e"
                    android:textSize="@dimen/tv_size13"
                    />
            </RelativeLayout>

        
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>