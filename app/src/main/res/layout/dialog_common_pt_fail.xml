<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_gravity="right"
        android:layout_marginBottom="5dp"
        android:src="@drawable/free_icon_close" />

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_close"
        android:background="@drawable/withdrawal_exp_dialog_red"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin20"
            android:text="温馨提示"
            android:textColor="#FBFFA1"
            android:textSize="20dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin15"
            android:paddingLeft="@dimen/margin20"
            android:paddingRight="@dimen/margin20"
            android:text="您的拼团订单，可以预存会员后"
            android:textColor="#FBFFA1"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin15"
            android:paddingLeft="@dimen/margin20"
            android:paddingRight="@dimen/margin20"
            android:text="直接免拼发货哦。"
            android:textColor="#FBFFA1"
            android:textSize="15dp" />


        <ImageView
            android:id="@+id/bt1"
            android:layout_width="218dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/margin25"
            android:layout_marginTop="@dimen/margin20"
            android:background="@drawable/direct_deliver_become_member" />


    </LinearLayout>


</LinearLayout>