     <RelativeLayout
        android:id="@+id/ll_all_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/youhuiquan_bg" >
        
        <LinearLayout 
            android:id="@+id/ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_marginTop="3dp"
            android:layout_marginLeft="86dp"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">
            <LinearLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
			      <TextView
			           android:id="@+id/tv_rmb"
			           android:layout_width="wrap_content"
			           android:layout_height="wrap_content"
			           android:text="¥"
			           android:textSize="17sp"
			           android:layout_marginRight="4dp"
			           android:textColor="#ff3f8b" /> 
			       <TextView
			           android:id="@+id/tv_cprice"
			           android:layout_width="wrap_content"
			           android:layout_height="wrap_content"
			           android:text="10"
			           android:layout_marginRight="10dp"
			           android:textColor="#ff3f8b"
			           android:textSize="38sp" />
					<TextView
			           android:id="@+id/tv_yuan"
			           android:layout_width="wrap_content"
			           android:layout_height="wrap_content"
			           android:text="元"
			           android:textSize="17sp"
			           android:textColor="#ff3f8b" />
            </LinearLayout>
            
           <TextView
                android:id="@+id/tv_manshiyong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(满100可用)"
                android:textColor="#ff3f8b"
                android:textSize="11sp" />  
            
        </LinearLayout>
        

        <TextView
            android:id="@+id/tv_time_use"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll"
            android:layout_alignLeft="@id/ll"
            android:text="使用时间:"
            android:textColor="#A8A8A8"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_begin_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_time_use"
            android:layout_toRightOf="@id/tv_time_use"
            android:text="  开始时间-"
            android:textColor="#A8A8A8" 
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_end_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_time_use"
            android:layout_toRightOf="@id/tv_begin_time"
            android:text="过期时间"
            android:textColor="#A8A8A8"
            android:textSize="11sp" />
        
        <ImageView
            android:id="@+id/img_yiguoqi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="25dp"
            android:src="@drawable/yiguoqi_icon"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/img_yishiyong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="25dp"
            android:src="@drawable/yishiyong_icon"
            android:visibility="gone" />  
            
        <ImageView
