<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/rl_task"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="#f8f8f8" />

        <View
            android:layout_width="0.3dp"
            android:layout_height="match_parent"
            android:background="#f8f8f8" />

        <ImageView
            android:id="@+id/img_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin20"
            android:background="#00000000"
            />

        <TextView
            android:id="@+id/tv_point"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="50dp"
            android:layout_marginTop="@dimen/margin15"
        />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_pic"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/margin15"
            android:layout_marginRight="@dimen/margin15"
            android:layout_marginTop="@dimen/margin"
            android:gravity="center_horizontal"
     
            android:textColor="#333333"
            android:textSize="@dimen/tv_size14" />

        <TextView
            android:id="@+id/tv_reward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/margin20"
            android:layout_marginTop="@dimen/margin"
    
            android:textColor="#fa5452"
            android:textSize="@dimen/tv_size13" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_task2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="#f8f8f8" />

        <View
            android:layout_width="0.3dp"
            android:layout_height="match_parent"
            android:background="#f8f8f8" />

        <ImageView
            android:id="@+id/img_pic2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin20"
            android:background="#00000000"
            />

        <TextView
            android:id="@+id/tv_point2"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="50dp"
            android:layout_marginTop="@dimen/margin15"
           />

        <TextView
            android:id="@+id/tv_name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_pic2"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/margin15"
            android:layout_marginRight="@dimen/margin15"
            android:layout_marginTop="@dimen/margin"
            android:gravity="center_horizontal"
    
            android:textColor="#333333"
            android:textSize="@dimen/tv_size14" />

        <TextView
            android:id="@+id/tv_reward2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name2"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/margin20"
            android:layout_marginTop="@dimen/margin"
  
            android:textColor="#fa5452"
            android:textSize="@dimen/tv_size13" />
    </RelativeLayout>

</LinearLayout>