<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_fanzao"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.yssj.custom.view.RoundImageButton
            android:id="@+id/item_indiana_head_headpicture"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/transparenct"
            android:clickable="false" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/item_indiana_head_headpicture"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_indiana_head_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小鸡炖蘑菇"
                    android:textColor="#3e3e3e"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_indiana_head_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2016.5.20  20:18:15"
                    android:textColor="#a8a8a8"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/item_indiana_head_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="人次"
            android:textColor="#a8a8a8"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/item_indiana_head_countpeople"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/item_indiana_head_people"
            android:gravity="center"
            android:text="1"
            android:textColor="#ff3f8b"
            android:textSize="14sp" />
    </RelativeLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_bottom_show"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#f0f0f0"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:layout_width="20dp"
            android:layout_height="1.5dp"
            android:background="#a8a8a8" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:text="只显示最新300条记录哦~"
            android:textColor="#a8a8a8"
            android:textSize="12sp" />

        <View
            android:layout_width="20dp"
            android:layout_height="1.5dp"
            android:background="#a8a8a8" />
    </LinearLayout>
</LinearLayout>