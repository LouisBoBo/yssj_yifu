<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/white_fanzao"
    android:layout_width="274dp"
    android:layout_height="wrap_content" >

    <ImageView
        android:visibility="gone"
        android:layout_marginLeft="244dp"
        android:id="@+id/balance_dialog_close"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/icon_close_new" />

    <TextView
        android:layout_marginTop="30dp"
        android:id="@+id/balance_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/balance_dialog_close"
        android:layout_centerHorizontal="true"
        android:text="温馨提示"
        android:textColor="#3e3e3e"
        android:textSize="15sp" />

    <TextView
        android:layout_marginTop="9dp"
           android:layout_marginLeft="15dp"
        android:id="@+id/balance_dialog_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/balance_dialog_title"
        android:text="你确定要放弃支付吗？未完成支付的订单会为"
        android:textColor="#7d7d7d"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/balance_dialog_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/balance_dialog_tv1"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="你保留24小时,可在我的个人中心再次支付"
        android:textColor="#7d7d7d"
        android:textSize="12sp" />
        <LinearLayout
             android:layout_marginLeft="15dp"
        android:layout_width="254dp"
        android:layout_height="38dp"
         android:layout_below="@id/balance_dialog_tv2"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp" >

        <TextView
            android:id="@+id/dismiss"
            android:layout_width="115dp"
            android:layout_height="38dp"
            android:background="@drawable/shape_corners_public_use"
            android:gravity="center"
            android:text="取消"
            android:textColor="#ff3f8b"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/confrim"
            android:layout_width="115dp"
            android:layout_height="38dp"
            android:layout_marginLeft="14dp"
            android:background="@drawable/indiana_shape_shaidan"
            android:gravity="center"
            android:text="确定"
            android:textColor="#ffffff"
            android:textSize="14sp" />
    </LinearLayout>

</RelativeLayout>