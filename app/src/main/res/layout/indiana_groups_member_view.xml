<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="64dp"
        android:layout_height="60dp"
		android:layout_gravity="center_horizontal">

		<ImageView
			android:id="@+id/groups_head_iv"
			android:layout_width="60dp"
			android:layout_height="60dp"
			android:adjustViewBounds="true"
			android:layout_centerVertical="true"
			android:background="@color/transparenct"
			android:clickable="false"
			android:visibility="gone" />
		<TextView
			android:id="@+id/groups_head_empty"
			android:layout_width="60dp"
			android:layout_height="60dp"
			android:layout_gravity="center_horizontal"
			android:gravity="center"
			android:maxLines="2"
			android:textColor="#FF3F8B"
			android:text="谁要\n"
			android:visibility="visible"
			android:paddingLeft="@dimen/margin5"
			android:paddingRight="@dimen/margin5"
			android:background="@drawable/shape_public_line_circle_ff3f8b"
			android:textSize="@dimen/tv_size12" />

		<ImageView
			android:id="@+id/groups_head_tz_icon"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:adjustViewBounds="true"
			android:layout_alignParentRight="true"
			android:clickable="false"
			android:src="@drawable/icon_group_host"
			android:visibility="invisible"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/groups_nickname"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:gravity="center"
		android:layout_gravity="left"
        android:maxLines="1"
		android:ellipsize="end"
        android:textColor="#7D7D7D"
        android:text=""
		android:visibility="visible"
        android:textSize="@dimen/tv_size12" />

</LinearLayout>