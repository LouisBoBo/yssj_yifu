<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/base_head" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/payback_order_info_bg"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="商家确认收货并发货"
            android:textColor="@color/white"
            android:textSize="@dimen/tv_size18" />

        <TextView
            android:id="@+id/tv_order_je"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"
            android:textSize="@dimen/tv_size16" />

        <TextView
            android:id="@+id/tv_order_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"
            android:textSize="@dimen/tv_size16" />

        <TextView
            android:id="@+id/tv_confirm_sh_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"
            android:textSize="@dimen/tv_size16" />

        <TextView
            android:id="@+id/tv_sh_wl_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"
            android:textSize="@dimen/tv_size16" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:text="商家确认收货并发货"
            android:textColor="@color/title_color"
            android:textSize="@dimen/tv_size18" />

        <TextView
            android:id="@+id/tv_sh_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:lineSpacingExtra="@dimen/margin"
            android:textColor="@color/text1_color"
            android:textSize="@dimen/tv_size16" />
        
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_receive_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="@dimen/margin"
        android:text="商家已收到您换货的商品，换货商品已发出。"
        android:textColor="@color/title_color"
        android:textSize="@dimen/tv_size16" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/line" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="物流跟踪"
        android:textColor="@color/title_color"
        android:textSize="@dimen/tv_size18" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/line" />

    <ListView
        android:id="@+id/list"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin"
        android:divider="@null" >
    </ListView>
    
    <Button
        android:id="@+id/btn_confirm_goods"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
      	android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/payback_cancle_bg"
        android:gravity="center"
        android:text="确认收货"
        android:textColor="@color/white"
        android:textSize="@dimen/tv_size16" />

</LinearLayout>