<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bao="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin10"
        android:layout_marginTop="15dp" >

        <TextView
            android:id="@+id/tv_sum_evaluate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="问题描述"
            android:textColor="@color/title_color"
            android:textSize="@dimen/tv_size15" />
    </RelativeLayout>

    <EditText
        android:cursorVisible="true"
        android:textCursorDrawable="@null"
        android:id="@+id/apply_et_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/evaluate_content_bg"
        android:gravity="top"
        android:lines="4"
        android:hint="请您在次描述详细问题"
        android:padding="5dp"
        android:textColor="@color/title_color"
        android:textSize="@dimen/tv_size16" />

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上传图片凭证"
            android:textColor="@color/title_color"
            android:textSize="@dimen/tv_size15" />
    
    <Button
        android:id="@+id/choose_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin25"
        android:layout_marginLeft="10dp"
        android:background="@drawable/apply_img"
        android:drawablePadding="@dimen/margin"
        android:textColor="@color/text1_color"
        android:textSize="@dimen/tv_size16" />

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="最多上传三张，每张不超过5M，支持JPG、PNG、BMP"
            android:textColor="@color/text1_color"
            android:textSize="@dimen/tv_size15" />
    <LinearLayout
        android:id="@+id/apply_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal" >
    </LinearLayout>

</LinearLayout>
