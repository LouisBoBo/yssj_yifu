<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="82dp"
    android:background="@color/white"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/activity_match_select_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:visibility="gone"
        android:src="@drawable/icon_dapeigou_celect" />

    <ImageView
        android:id="@+id/activity_match_main_img_iv"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="10dp"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/match_main_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="#3E3E3E"
            android:textSize="@dimen/tv_size14" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/match_main_price_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:textColor="#3E3E3E"
                android:textSize="@dimen/tv_size14" />

            <TextView
                android:id="@+id/match_main_price_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#A8A8A8"
                android:textSize="@dimen/tv_size11" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_add_reduce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <View
                android:layout_width="0.5dp"
                android:layout_height="24dp"
                android:background="#a9a9a9" />

            <ImageView
                android:id="@+id/img_reduce"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/img_et_sum"
                android:contentDescription="@string/no_warn"
                android:scaleType="center"
                android:src="@drawable/icon_jian_disable" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="24dp"
                android:background="#a9a9a9" />

            <TextView
                android:id="@+id/match_number_tv"
                android:layout_width="48dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/img_et_sum"
                android:gravity="center"
                android:text="1"
                android:textColor="#3e3e3e"
                android:textSize="@dimen/tv_size14" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="24dp"
                android:background="#a9a9a9" />

            <ImageView
                android:id="@+id/img_add"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/img_et_sum"
                android:contentDescription="@string/no_warn"
                android:scaleType="center"
                android:src="@drawable/icon_jia" />
            <View
                android:layout_width="0.5dp"
                android:layout_height="24dp"
                android:background="#a9a9a9" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>