<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/rel_shop_name"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_shop_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:gravity="center|left"
            android:text="RS03"
            android:drawableLeft="@drawable/contact"
            android:singleLine="true"
            android:ellipsize="middle"
            android:drawablePadding="3dp"
            android:textSize="13sp" />
		<TextView 
		    android:id="@+id/tv_order_number"
		    android:layout_width="wrap_content"
		    android:layout_height="match_parent"
		    android:layout_marginLeft="10dp"
			android:text="订单编号:110527569708213"		    
			android:textColor="@color/gray_color"
			android:layout_marginRight="12dp"
			android:gravity="center_vertical"
			android:textSize="13sp"
		    />
        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="12dp"
            android:gravity="center|right"
            android:text="交易成功"
            android:textColor="@color/pink_color"
            android:textSize="13sp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="#dbdbdb" />

    <LinearLayout
        android:id="@+id/container_item"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginRight="12dp"
        android:orientation="horizontal" >

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_sum"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:gravity="center|left"
            android:text="共1件商品"
            android:textColor="@color/title_color"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_zprice"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:gravity="center|right"
            android:text="实付:￥710.00(邮费:￥0.00)"
            android:textColor="@color/title_color"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay1"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_marginBottom="7dp"
        android:orientation="horizontal" >

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            android:visibility="gone"
            android:id="@+id/btn_Contact_consumer"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_marginRight="12dp"
            android:background="@drawable/bn_select_orders"
            android:focusable="false"
            android:gravity="center"
            android:text="联系买家"
            android:textColor="@color/white"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay2"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_marginBottom="7dp"
        android:orientation="horizontal" >

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            android:visibility="gone"
            android:id="@+id/btn_Remind_shipments"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_marginRight="12dp"
            android:background="@drawable/bn_select_orders"
            android:focusable="false"
            android:gravity="center"
            android:text="提醒发货"
            android:textColor="@color/white"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay3"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_marginBottom="7dp"
        android:orientation="horizontal" >

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            android:visibility="gone"
            android:id="@+id/btn_check_logistics_3"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_marginRight="12dp"
            android:background="@drawable/bn_select_orders"
            android:focusable="false"
            android:gravity="center"
            android:text="查看物流"
            android:textColor="@color/white"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay4"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_marginBottom="7dp"
        android:orientation="horizontal" >

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            android:visibility="gone"
            android:id="@+id/btn_check_logistics_4"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_marginRight="12dp"
            android:background="@drawable/bn_select_orders"
            android:focusable="false"
            android:gravity="center"
            android:text="查看物流"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <Button
            android:visibility="gone"
            android:id="@+id/btn_Evaluation_consumer"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_marginRight="12dp"
            android:background="@drawable/bn_select_orders"
            android:focusable="false"
            android:gravity="center"
            android:text="评价买家"
            android:textColor="@color/white"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay5"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_marginBottom="7dp"
        android:orientation="horizontal" >

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay6"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_marginBottom="7dp"
        android:orientation="horizontal" >

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay7"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_marginBottom="7dp"
        android:orientation="horizontal" >

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay9"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_marginBottom="7dp"
        android:orientation="horizontal" >

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>