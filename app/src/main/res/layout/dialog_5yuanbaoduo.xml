<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="273dp"
        android:layout_height="270dp" >
            <LinearLayout
                android:layout_width="274dp"
                android:layout_height="270dp"
                android:background="@drawable/qiandaoshuoming_dialog_back"
                android:orientation="vertical" >

              <RelativeLayout 
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"> 
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:background="@drawable/bg"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="5元夺宝"
                    android:textColor="#ffffff"
                    android:textSize="16sp" />
               
                <ImageView 
                    android:id="@+id/icon_close"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/icon_close_white"
                    android:background="@color/transparenct"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"/>
				</RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="25dp" >

                    <ImageView
                        android:id="@+id/baoyou2"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:layout_marginLeft="25dp"
                          />

                    <TextView 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/baoyou2"
                        android:text="赢取VIVO+OPPO"
                        android:textSize="12sp"
                        android:textColor="#7d7d7d"
                        android:layout_marginTop="7dp"
                        android:layout_alignLeft="@id/baoyou2"
                        android:layout_alignRight="@id/baoyou2"
                        android:gravity="center_horizontal"/>
                    
                    
                    <ImageView
                        android:id="@+id/duobao2"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="25dp"
                       
                       />
                    
                    
                     <TextView 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/duobao2"
                        android:text="5元包邮"
                        android:textSize="12sp"
                        android:textColor="#7d7d7d"
                        android:layout_marginTop="7dp"
                        android:layout_alignLeft="@id/duobao2"
                        android:layout_alignRight="@id/duobao2"
                        android:gravity="center_horizontal"/>
                    
                    
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/goshop"
                        android:layout_width="115dp"
                        android:layout_height="38dp"
                       android:layout_alignParentLeft="true"
                       android:layout_marginLeft="15dp"
                        android:background="@drawable/bg_red_ok"
                        android:text="去夺宝"
                        android:textColor="#ffffff"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/goduobao"
                        android:layout_width="115dp"
                        android:layout_height="38dp"
                       android:layout_alignParentRight="true"
                       android:layout_marginRight="15dp"
                        android:background="@drawable/bg_red_ok"
                        android:text="去抢购"
                        android:textColor="#ffffff"
                        android:textSize="16sp" />
                </RelativeLayout>
            </LinearLayout>

  <!--           <ImageView
                android:id="@+id/icon_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:paddingTop="-19dp"
                android:src="@drawable/icon_close"
                android:visibility="gone" /> -->
    </RelativeLayout>

    <!-- bg_singn_dialog_shape -->

</LinearLayout>