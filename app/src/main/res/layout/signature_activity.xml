<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:id="@+id/qianming"
     >

    <include layout="@layout/base_head" />

    <RelativeLayout
        android:id="@+id/rel_identify_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin15"
        android:layout_marginRight="@dimen/margin15"
        android:layout_marginTop="@dimen/margin15"
        android:background="@drawable/et_resetpassword_bn"
        android:orientation="horizontal"
        android:padding="@dimen/margin10" >

        <EditText
            android:id="@+id/comment_edit_signature"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="left|top"
            android:lineSpacingExtra="@dimen/margin"
            android:lines="3"
            android:padding="@dimen/margin"
            android:hint="请输入不多于50个字符"
            android:textColor="@color/title_color"
            android:textCursorDrawable="@null"
            android:textColorHint="#989898"
            android:textSize="@dimen/tv_size16" />
    </RelativeLayout>

</LinearLayout>