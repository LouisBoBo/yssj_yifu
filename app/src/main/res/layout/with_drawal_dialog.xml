<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="274dp"
    android:layout_height="wrap_content"
    android:background="@drawable/white_fanzao"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/balance_dialog_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="亲，余额翻倍之间不能提现哦~"
        android:textColor="#7d7d7d"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/balance_dialog_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="请耐心等待时间结束后再来提现哦。"
        android:textColor="#7d7d7d"
        android:textSize="12sp" />

    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/balance_dialog_start"
        android:layout_width="254dp"
        android:layout_height="38dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/indiana_shape_shaidan"
        android:gravity="center"
        android:text="知道了"
        android:textColor="#ffffff"
        android:textSize="15sp" />

</LinearLayout>