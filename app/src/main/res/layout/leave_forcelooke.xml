<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >
    
	<LinearLayout 
	    android:layout_width="274dp"
	    android:layout_height="wrap_content"
	    
	    android:background="@drawable/leave_back"
	    android:orientation="vertical">
	    
	    <TextView 
	        android:id="@+id/id_tv_titie"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="亲~确定要离开吗？"
	        android:textSize="16sp"
	        android:textColor="#3E3E3E"
	        android:layout_marginTop="30dp"
	        android:layout_gravity="center_horizontal"
	        />
	    
	    <TextView 
	        android:id="@+id/id_tv_content"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="再逛一下下就可以获得任务奖励噢~"
	        android:textSize="14sp"
	        android:textColor="#7D7D7D"
	        android:layout_marginLeft="15dp"
	        android:layout_marginRight="15dp"
	        android:layout_gravity="center_horizontal"
	        android:layout_marginTop="10dp"/>
	    
	    <RelativeLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="22dp"
	        android:layout_marginTop="30dp">
	        
	        <Button 
	            android:id="@+id/btn_left"
	            android:layout_width="115dp"
	            android:layout_height="38dp"
	            android:text="不了,谢谢"
	            android:textSize="16sp"
	            android:textColor="#FF3F8B"
	            android:background="@drawable/bg_tans_cancel"
	            android:layout_alignParentLeft="true"
	            android:layout_marginLeft="15dp"/>
	        
	        
	        <Button 
	            android:id="@+id/btn_right"
	            android:layout_width="115dp"
	            android:layout_height="38dp"
	            android:text="再逛逛"
				android:textColor="@color/white"
	            
	             android:background="@drawable/bg_red_ok"
	            android:textSize="16sp"
	            android:layout_alignParentRight="true"
	            android:layout_marginRight="15dp"/>
	    </RelativeLayout>
	</LinearLayout>
</LinearLayout>
