<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_gravity="right"
        android:layout_marginBottom="5dp"
        android:src="@drawable/free_icon_close" />

    <RelativeLayout
        android:id="@+id/rl_bg"
        android:layout_width="300dp"
        android:layout_height="367dp"
        android:background="@drawable/new_estluck_invit_become_member"
        android:layout_below="@+id/iv_close">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="180dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginRight="@dimen/margin40"
                android:src="@drawable/luck_invit_button"
                android:layout_width="45dp"
                android:layout_height="40dp"/>
            <ImageView
                android:src="@drawable/luck_invit_button"
                android:layout_width="45dp"
                android:layout_height="40dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_txk_countdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="250dp"
            android:text="00:20:10后失败"
            android:textColor="#FFDE00"
            android:textSize="17sp" />
    </RelativeLayout>


</LinearLayout>