<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/qiandaoshuoming_dialog_back" >

    <ImageView
        android:id="@+id/icon_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="15dp"
        android:scaleType="fitXY"
        android:src="@drawable/shopcart_icon_close" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="70dp"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imag_girl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/jingxuan_girl" />

        <TextView
            android:id="@+id/scan_finish_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="24dp"
            android:text="你喜爱的商品已经推荐至购物车——我的喜欢\n你可以继续浏览下一组推荐商品，也可以去购物车查看我的喜欢"
            android:textColor="#7D7D7D"
            android:textSize="@dimen/tv_size14" />

        <Button
            android:id="@+id/btn_next_red"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="64dp"
            android:background="@drawable/btn_back_red"
            android:text="浏览下一组"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_like_white"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn_back_white"
            android:text="我的最爱"
            android:textColor="#FF3F8B"
            android:textSize="15sp" />
    </LinearLayout>

</RelativeLayout>