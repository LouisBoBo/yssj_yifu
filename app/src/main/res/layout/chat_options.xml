<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_toolsbar"
        android:gravity="center_vertical"
        android:padding="3dp" >

        <!--  
        <ImageView
            android:id="@+id/record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:paddingRight="3dp"
            android:scaleType="centerInside"
            android:src="@drawable/ico_voice_selector" />-->

        <ImageView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:paddingRight="3dp"
            android:scaleType="centerInside"
            android:src="@drawable/ico_keyborad_selector" />

        <ImageView
            android:id="@+id/plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:paddingRight="3dp"
            android:scaleType="centerInside"
            android:src="@drawable/ico_add_selector" />

        <LinearLayout
            android:id="@+id/text_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <com.yeamo4.widget.rich.RichEditText
                android:id="@+id/edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:background="@drawable/bg_toolsbar_input"
                android:ems="10"
                android:maxLines="2"
                android:minHeight="0dp"
                android:textSize="14sp" />

            <Button
                android:id="@+id/send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_send_selector"
                android:minHeight="37dp"
                android:minWidth="48dp"
                android:text="发送"
                android:textSize="14sp" />
        </LinearLayout>
<!--  
        <Button
            android:id="@+id/click_to_say"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_click_to_say_selector"
            android:minHeight="0dp"
            android:singleLine="true"
            android:text="按住说话"
            android:textSize="14sp" />
            -->
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/options_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center" >
    </RelativeLayout>

</LinearLayout>