<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <!-- <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sign_explain"/> -->
    
    <RelativeLayout 
        android:layout_width="280dp"
        android:layout_height="310dp"
        android:background="@drawable/qiandaoshuoming_dialog_back">
        <!-- android:layout_height="254dp" -->
   		 <RelativeLayout
   		    android:id="@+id/top_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >   
		      	<TextView 
			          android:id="@+id/top"
				      android:layout_width="match_parent"
				      android:layout_height="wrap_content"
				      android:text="任务说明"
				      android:textSize="@dimen/tv_size18"
				      android:textColor="@color/white_white"
				      android:gravity="center"
				      android:background="@drawable/bg"
					      
			    	  />
		   		  <ImageView
			          android:id="@+id/icon_close"
			          android:layout_width="30dp"
			          android:layout_height="30dp"
			          android:layout_alignParentRight="true"
			          android:layout_centerVertical="true"
			          android:layout_marginRight="15dp"
			          android:padding="5dp"
			          android:scaleType="fitXY"
			          android:src="@drawable/iconkaquanshuomclose" />
      </RelativeLayout>
      <RelativeLayout 
          android:id="@+id/rl"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@id/top_rl"
          android:background="@drawable/sign_rl_back"
          android:layout_alignLeft="@id/top_rl"
          android:layout_alignRight="@id/top_rl">
          
          
          <TextView 
              android:id="@+id/tv_one"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_toRightOf="@id/img_one"
              android:layout_marginRight="4dp"
              android:layout_marginLeft="4dp"
              android:layout_marginTop="30dp"
              android:text="浏览完指定数量商品即可完成任务~"
              android:textSize="@dimen/tv_size16"
              android:textColor="#ff3f8b"
              android:gravity="center_horizontal"/>
          
          
          
          <TextView 
              android:id="@+id/tv_two"
             android:layout_width="match_parent"
              android:layout_height="wrap_content"
               android:layout_below="@id/tv_one"
               android:layout_marginRight="4dp"
               android:layout_marginLeft="4dp"
               android:layout_marginTop="20dp"
               android:text="购买温馨提示"
               android:textSize="16sp"
               android:gravity="center_horizontal"
               android:textStyle="bold"
              android:textColor="#3e3e3e"/>
          <TextView 
              android:id="@+id/tv_three"
             android:layout_width="match_parent"
              android:layout_height="wrap_content"
               android:layout_below="@id/tv_two"
               android:layout_marginRight="13dp"
               android:layout_marginLeft="13dp"
               android:layout_marginTop="8dp"
               android:text="活动商品价格为最优惠价格，购买时不能使用余额、积分、优惠券。由于抢购人数较多，商品库存有限，请及时下单，以免心爱的美衣被抢光喔～"
               android:textSize="14sp"
              android:textColor="#7D7D7D"/>
         
          <TextView 
              android:id="@+id/bt"
              android:layout_width="244dp"
              android:layout_height="38dp"
              android:text="立即浏览美衣"
              android:textSize="16sp"
              android:textColor="#FFFFFF"
              android:gravity="center"
             android:layout_below="@id/tv_three"
             android:layout_marginBottom="25dp"
              android:layout_marginTop="30dp"
              android:layout_marginLeft="15dp"
              android:layout_marginRight="15dp"
             android:background="@drawable/sign_back"/>
          
      </RelativeLayout>
        
    </RelativeLayout>

</LinearLayout>
