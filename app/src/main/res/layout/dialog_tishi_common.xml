<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_singn_dialog_shape"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_close_oneyuan"
            android:layout_gravity="right"
            />


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="余额抵扣说明"
            android:textColor="#333333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tag_name"
            android:layout_width="244dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="预充值的会员卡费与赚钱任务赢得的可提现现金，均可全额用于购买商品哦。"
            android:textColor="#7d7d7d"
            android:textSize="14sp" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_fanhuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:text="已累计返还9.0元"
            android:textColor="#ff3f8b"
            android:textSize="16sp" />

        <TextView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="(可全额抵扣商品价格)"
            android:textColor="#ff3f8b"
            android:textSize="12sp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:layout_centerVertical="true"
                android:id="@+id/btn_cancel"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/bg_tans_cancel"
                android:text="知道了"
                android:visibility="gone"
                android:layout_marginLeft="18dp"
                android:textColor="@color/common_red"
                android:textSize="18sp" />

            <Button
                android:layout_centerVertical="true"
                android:id="@+id/btn_ok"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin25"
                android:layout_marginLeft="@dimen/margin25"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_red_ok"
                android:text="去赚余额"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:visibility="visible" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>