<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/qiandaoshuoming_dialog_back">

    <RelativeLayout
        android:layout_width="274dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/balance_dialog_close"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="244dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/icon_close_new"
            android:visibility="visible" />

        <TextView
            android:id="@+id/balance_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/balance_dialog_close"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:text="温馨提示"
            android:textColor="#3e3e3e"
            android:textSize="15sp" />


        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/balance_dialog_tv2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/balance_dialog_title"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="拼团成功！现在立即去疯抢，1折带走商品！"
            android:textColor="#7d7d7d"
            android:textSize="15sp" />


        <LinearLayout
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:layout_width="254dp"
            android:layout_height="38dp"
            android:layout_below="@id/balance_dialog_tv2"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="30dp">


            <TextView
                android:id="@+id/btn_ok"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:background="@drawable/bg_red_ok"
                android:gravity="center"
                android:text="去疯抢"
                android:textColor="#ffffff"
                android:textSize="16sp" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>