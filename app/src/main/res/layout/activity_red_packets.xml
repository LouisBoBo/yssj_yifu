<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/redd"
    android:orientation="vertical" >

    <include layout="@layout/base_head" />

    <RelativeLayout
        android:id="@+id/rel_red_bag"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/margin20"
        android:background="@color/white" >

        <ImageView
            android:id="@+id/img_red_bag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/img_send_red_bag" />

        <ImageView
            android:id="@+id/img_right_arrow2_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin15"
            android:background="@color/transparenct"
            android:src="@drawable/mine_more" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin20"
            android:layout_marginRight="@dimen/margin"
            android:layout_toLeftOf="@+id/img_right_arrow2_1"
            android:layout_toRightOf="@id/img_red_bag"
            android:text="我要发红包"
            android:textColor="@color/text_three_login"
            android:textSize="@dimen/tv_size16" />
    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0.3dp"
        android:background="@drawable/line" />

    <RelativeLayout
        android:id="@+id/rel_red_bag_mine"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/margin20"
        android:background="@color/white" >

        <ImageView
            android:id="@+id/img_red_bag_mine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/img_red_bag_mine" />

        <ImageView
            android:id="@+id/img_right_arrow2_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin15"
            android:background="@color/transparenct"
            android:src="@drawable/mine_more" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin20"
            android:layout_marginRight="@dimen/margin"
            android:layout_toLeftOf="@+id/img_right_arrow2_2"
            android:layout_toRightOf="@id/img_red_bag_mine"
            android:text="已发的红包"
            android:textColor="@color/text_three_login"
            android:textSize="@dimen/tv_size16" />
    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0.3dp"
        android:background="@drawable/line" />

</LinearLayout>