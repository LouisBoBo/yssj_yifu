<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="274dp"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="274dp"
        android:layout_height="wrap_content"
        android:background="@drawable/qiandaoshuoming_dialog_back"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="提示"
                android:textColor="#3C3C3C"
                android:textSize="@dimen/tv_size18" />

            <ImageView
                android:id="@+id/dialog_colse"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:padding="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/icon_search_close" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/white"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="系统检测到你尚未绑定微信提现账户，微信授权后即可绑定。提现款项将直接打入你绑定的微信提现账户"
                android:textColor="#7D7D7D"
                android:textSize="@dimen/tv_size14" />

            <EditText
                android:id="@+id/explain_name"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/wallet_withdraw_edit_bg"
                android:gravity="center_vertical"
                android:hint="姓名(必须填写本人真实姓名)"
                android:inputType="text"
                android:padding="@dimen/margin15"
                android:paddingLeft="@dimen/margin15"
                android:textColor="#3e3e3e"
                android:textColorHint="#a8a8a8"
                android:textCursorDrawable="@null"
                android:textSize="13sp" />


            <Button
                android:id="@+id/bt_next"
                android:layout_width="243dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/bg_red_ok"
                android:text="现在授权并绑定微信账户"
                android:textColor="#fFFFFF"
                android:textSize="16sp"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>