                    android:layout_marginLeft="86dp" >

                    <TextView
                        android:id="@+id/ten_yuan_bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="14dp"
