<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="274dp"
    android:layout_height="160dp"
    android:background="@drawable/bg_singn_dialog_shape"
    android:gravity="center_horizontal" >

    <TextView
        android:id="@+id/tv_what"
        android:layout_width="254dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="9dp"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:text="亲，确定要离开吗？"
        android:textColor="#3E3E3E"
        android:textSize="15sp" />

    <TextView
        android:layout_width="254dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_what"
        android:gravity="center_horizontal"
        android:text="再逛一下就可以获得2元现金哦~"
        android:textColor="#7D7D7D"
        android:textSize="12sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp" >

        <Button
            android:id="@+id/tv_fanhuiqiandao"
            android:layout_marginLeft="20dp"
            android:layout_width="110dp"
            android:layout_height="38dp"
            android:textColor="@color/common_red"
            android:background="@drawable/bg_tans_cancel"
            android:text="不了，谢谢"
            android:textSize="15sp" />

        <Button
            android:id="@+id/tv_close"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:layout_width="110dp"
            android:layout_height="38dp"
            android:background="@drawable/bg_red_ok"
            android:text="在逛逛"
            android:textSize="15sp" />
    </RelativeLayout>

</RelativeLayout>