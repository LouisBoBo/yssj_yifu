<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e5e5e5" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="结算"
                android:textColor="#3e3e3e"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/indiana_pay_tv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="取消"
                android:textColor="#3e3e3e"
                android:textSize="14sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e5e5e5" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="参与次数"
                android:textColor="#3e3e3e"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/ed_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:layout_width="1dp"
                    android:layout_height="24dp"
                    android:background="#a9a9a9" />

                <ImageView
                    android:id="@+id/indiana_btn_reduce"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="@dimen/marginsb5"
                    android:background="@drawable/img_et_sum"
                    android:contentDescription="@string/no_warn"
                    android:scaleType="center"
                    android:src="@drawable/icon_jian_disable" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="24dp"
                    android:background="#a9a9a9" />

                <TextView
                    android:id="@+id/indiana_tv_goods_num"
                    android:layout_width="48dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/img_et_sum"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="#3e3e3e"
                    android:textSize="@dimen/tv_size14" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="24dp"
                    android:background="#a9a9a9" />

                <ImageView
                    android:id="@+id/indiana_btn_add"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/img_et_sum"
                    android:contentDescription="@string/no_warn"
                    android:scaleType="center"
                    android:src="@drawable/icon_jia" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="24dp"
                    android:background="#a9a9a9" />

            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e5e5e5" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="应付总额"
                android:textColor="#3e3e3e"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/indiana_pay_tv_count_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="￥2.0"
                android:textColor="#3e3e3e"
                android:textSize="14sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e5e5e5" />

        <LinearLayout
            android:id="@+id/indiana_ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分享抵扣"
                    android:textColor="#3e3e3e"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/indiana_pay_tv_deduction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="-￥1.9"
                    android:textColor="#3e3e3e"
                    android:textSize="14sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e5e5e5" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="还需支付"
                    android:textColor="#3e3e3e"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/indiana_pay_tv_need"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="￥0.1"
                    android:textColor="#ff3f8b"
                    android:textSize="14sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e5e5e5" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/indiana_pay_tv_pay"
                android:layout_width="330dp"
                android:layout_height="42dp"
                android:background="@drawable/shape_public_all_ff3f8b"
                android:gravity="center"
                android:text="确定"
                android:textColor="#ffffff"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>