<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:descendantFocusability="afterDescendants" >

    <LinearLayout
        android:id="@+id/two_lay2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/lay_listview_height"
        android:layout_marginTop="@dimen/margin5"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/margin"
        android:paddingLeft="@dimen/margin5" >

        <ImageView
            android:id="@+id/two_img_choose2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:adjustViewBounds="true"
            android:clickable="true"
            android:contentDescription="@string/no_warn"
            android:focusable="false"
            android:padding="@dimen/margin10"
            android:scaleType="fitXY"
            android:src="@drawable/tvchooseno_normal" />

        <RelativeLayout
            android:layout_width="@dimen/img_goods_width"
            android:layout_height="@dimen/img_goods_height"
            android:layout_gravity="center_vertical"
            android:background="#00000000" >

            <ImageView
                android:id="@+id/two_img_goods2"
                android:layout_width="@dimen/img_goods_width"
                android:layout_height="@dimen/img_goods_height"
                android:layout_gravity="center_vertical"
                android:background="#00000000"
                android:contentDescription="@string/no_warn"
                android:scaleType="centerInside"
                android:src="@drawable/testtoux" />

            <ImageView
                android:id="@+id/two_img_goods_alpha2"
                android:layout_width="@dimen/img_goods_width"
                android:layout_height="@dimen/img_goods_height"
                android:layout_gravity="center_vertical"
                android:background="#55cecece"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/two_shopcart_shixiao2"
                android:layout_width="@dimen/img_goods_width"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:alpha="0.5"
                android:background="#000000"
                android:gravity="center"
                android:text="失效"
                android:textColor="#ffffff" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/two_l12"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin" >

            <TextView
                android:id="@+id/two_edit_cart2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingLeft="8dp"
                android:paddingRight="12dp"
                android:paddingTop="8dp"
                android:text="编辑"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/two_btn_share2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="@dimen/margin10"
                android:background="#ff3f8b"
                android:clickable="true"
                android:focusable="false"
                android:gravity="center"
                android:text="智能\n分享"
                android:textColor="#fff"
                android:textSize="@dimen/tv_size13" />

            <TextView
                android:id="@+id/two_tv_goods_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="30dp"
                android:layout_marginTop="8dp"
                android:layout_toLeftOf="@+id/two_edit_cart2"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="2015夏款欧美真丝镂"
                android:textColor="@color/black"
                android:textSize="@dimen/tv_size12" />

            <RelativeLayout
                android:id="@+id/two_size_color2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/two_tv_goods_name2"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/marginsb5"
                android:layout_marginTop="8dp"
                >

                <TextView
                    android:id="@+id/two_tv_color2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="颜色：黑白"
                    android:textColor="@color/gray_color"
                    android:textSize="@dimen/tv_size13" />

                <TextView
                    android:id="@+id/two_tv_size2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/two_tv_color2"
                    android:layout_marginLeft="@dimen/margin10"
                    android:layout_toRightOf="@+id/two_tv_color2"
                    android:text="尺寸：XL"
                    android:textColor="@color/gray_color"
                    android:textSize="@dimen/tv_size13" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/two_price_lay2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/two_tv_goods_name2"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"
                android:layout_toLeftOf="@id/two_btn_share2" >

                <TextView
                    android:id="@+id/two_tv_item_price2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/marginsb5"
                    android:text="￥195.00"
                    android:textColor="@color/black"
                    android:textSize="@dimen/tv_size13" />

                <TextView
                    android:id="@+id/two_tv_item_nprice2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/two_tv_item_price2"
                    android:layout_toRightOf="@+id/two_tv_item_price2"
                    android:text="￥469.00"
                    android:textColor="@color/gray_color"
                    android:textSize="@dimen/tv_size13" />

                <TextView
                    android:id="@+id/two_goods_count2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:text="X2"
                    android:textColor="@color/gray_color"
                    android:textSize="@dimen/tv_size13" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/two_ed_count2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/two_tv_goods_name2"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"
                android:visibility="gone" >

                <Button
                    android:id="@+id/two_btn_reduce2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="@dimen/marginsb5"
                    android:background="@drawable/bg_btn_number_choose"
                    android:clickable="true"
                    android:contentDescription="@string/no_warn"
                    android:focusable="false"
                    android:gravity="center"
                    android:text="一"
                    android:textColor="@color/gray_color" />

                <RelativeLayout
                    android:id="@+id/two_ll_num2"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_alignTop="@+id/two_btn_reduce2"
                    android:layout_toRightOf="@+id/two_btn_reduce2" >

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_alignParentTop="true"
                        android:background="@color/gray_color" />

                    <EditText
                        android:id="@+id/two_tv_goods_num2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="0.5dp"
                        android:layout_marginTop="0.5dp"
                        android:background="@null"
                        android:cursorVisible="true"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="9"
                        android:textColor="@color/black"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/tv_size13" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/gray_color" />
                </RelativeLayout>

                <Button
                    android:id="@+id/two_btn_add2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignTop="@+id/two_btn_reduce2"
                    android:layout_toRightOf="@+id/two_ll_num2"
                    android:background="@drawable/bg_btn_number_choose"
                    android:clickable="true"
                    android:focusable="false"
                    android:gravity="center"
                    android:text="十"
                    android:textColor="@color/gray_color" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>