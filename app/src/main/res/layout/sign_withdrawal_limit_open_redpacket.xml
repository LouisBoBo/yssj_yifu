<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="275dp"
    android:layout_height="350dp"
    android:background="@drawable/withdrawal_hongbao"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/open_red_packet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="112dp"
        android:src="@drawable/chai_hong_bao" />

    <TextView
        android:id="@+id/open_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/open_red_packet"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:gravity="center_horizontal"
        android:text="哇喔~抽中了一个红包!"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/tv_size19"
        android:textStyle="bold" />



    <ImageView
        android:visibility="gone"
        android:id="@+id/icon_close"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:padding="15dp"
        android:scaleType="fitXY"
        android:src="@drawable/icon_withdrawal_close" />

</RelativeLayout>